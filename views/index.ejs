<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <link rel="stylesheet" href="/css/theme.css">
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
  <title>Supermarket App</title>
  <style>
    body {
      background: radial-gradient(circle at 10% 20%, #e8f0ff 0, #f7f9fc 28%, #eef2f6 60%);
      color: #0f172a;
    }
    /* Hero Section */
    .hero {
      background-image: url('images/supermarket-hero.jpg'); /* Replace with your image */
      background-size: cover;
      background-position: center;
      color: #fff;
      text-shadow: 2px 2px 6px rgba(0,0,0,0.7);
      padding: 120px 20px;
      text-align: center;
      border-radius: 15px;
      margin-top: 20px;
    }
    .hero h1 {
      font-weight: 700;
      font-size: 3rem;
    }
    .hero p {
      font-size: 1.25rem;
    }
    /* Featured Products Cards */
    .product-card {
      transition: transform 0.3s, box-shadow 0.3s;
      border-radius: 14px;
      border: 1px solid #e2e8f0;
      box-shadow: 0 8px 18px rgba(15,23,42,0.08);
      background: linear-gradient(135deg, #ffffff 0%, #f9fbff 80%);
    }
    .product-card:hover {
      transform: translateY(-4px);
      box-shadow: 0 12px 26px rgba(15,23,42,0.14);
    }
    /* Footer */
    footer {
      background-color: #343a40;
      color: #fff;
      padding: 20px 0;
    }
  </style>
</head>
<body>
  <%- include('partials/navbar', { user: user, cart: cart }) %>

  <!-- Hero Section -->
  <div class="container hero">
    <h1>Welcome to Supermarket App</h1>
    <% if (user) { %>
      <% if (user.role === "admin") { %>
        <p class="lead">Manage your inventory efficiently. <a href="/inventory" class="btn btn-warning btn-lg fw-bold">Go to Inventory</a></p>
      <% } else { %>
        <p class="lead">Shop your favorite products now. <a href="/shopping" class="btn btn-warning btn-lg fw-bold">Start Shopping</a></p>
      <% } %>
    <% } else { %>
      <p class="lead">Please <a href="/login" class="btn btn-warning btn-lg fw-bold">Login</a> or <a href="/register" class="btn btn-success btn-lg fw-bold">Register</a> to start shopping!</p>
    <% } %>
  </div>

  <!-- Featured Products Section -->
  <div class="container mt-5">
    <h2 class="text-center mb-4">Featured Products</h2>
    <div class="row row-cols-1 row-cols-md-3 g-4">
      <% products.forEach(product => { %>
        <div class="col">
          <div class="card product-card h-100 shadow-sm">
            <img src="images/<%= product.image %>" class="card-img-top" alt="<%= product.productName %>">
            <div class="card-body text-center">
              <h5 class="card-title"><%= product.productName %></h5>
              <p class="card-text">$<%= product.price.toFixed(2) %></p>
              <% if (user && user.role !== 'admin') { %>
                <a href="/shopping" class="btn btn-primary">Buy Now</a>
              <% } else { %>
                <span class="text-muted">Login to buy</span>
              <% } %>
            </div>
          </div>
        </div>
      <% }) %>
    </div>
  </div>

  <!-- Footer -->
  <footer class="text-center mt-5">
    &copy; <%= new Date().getFullYear() %> Supermarket App. All Rights Reserved.
  </footer>
</body>
</html>
