<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
  <title>Supermarket App</title>
  <style>
    body {
      background-color: #f5f5f5;
    }
    /* Hero Section */
    .hero {
      background-image: url('images/supermarket-hero.jpg'); /* Replace with your image */
      background-size: cover;
      background-position: center;
      color: #fff;
      text-shadow: 2px 2px 6px rgba(0,0,0,0.7);
      padding: 120px 20px;
      text-align: center;
      border-radius: 15px;
      margin-top: 20px;
    }
    .hero h1 {
      font-weight: 700;
      font-size: 3rem;
    }
    .hero p {
      font-size: 1.25rem;
    }
    /* Featured Products Cards */
    .product-card {
      transition: transform 0.3s, box-shadow 0.3s;
      border-radius: 10px;
    }
    .product-card:hover {
      transform: translateY(-5px);
      box-shadow: 0 10px 20px rgba(0,0,0,0.2);
    }
    /* Footer */
    footer {
      background-color: #343a40;
      color: #fff;
      padding: 20px 0;
    }
  </style>
</head>
<body>
  <!-- Navbar -->
  <nav class="navbar navbar-expand-lg navbar-dark bg-dark shadow-sm">
    <div class="container">
      <a class="navbar-brand fw-bold" href="/">Supermarket App</a>
      <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarNav">
        <ul class="navbar-nav ms-auto">
          <% if (!user) { %>
            <li class="nav-item">
              <a class="nav-link" href="/register">Register</a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="/login">Login</a>
            </li>
          <% } else { %>
            <% if (user.role === "admin") { %>
              <li class="nav-item">
                <a class="nav-link" href="/inventory">Inventory</a>
              </li>
            <% } else { %>
              <li class="nav-item">
                <a class="nav-link" href="/shopping">Shopping</a>
              </li>
              <li class="nav-item">
                <a class="nav-link" href="/cart">View Cart</a>
              </li>
            <% } %>
            <li class="nav-item">
              <a class="nav-link" href="/logout">Logout</a>
            </li>
          <% } %>
        </ul>
      </div>
    </div>
  </nav>

  <!-- Hero Section -->
  <div class="container hero">
    <h1>Welcome to Supermarket App</h1>
    <% if (user) { %>
      <% if (user.role === "admin") { %>
        <p class="lead">Manage your inventory efficiently. <a href="/inventory" class="btn btn-warning btn-lg fw-bold">Go to Inventory</a></p>
      <% } else { %>
        <p class="lead">Shop your favorite products now. <a href="/shopping" class="btn btn-warning btn-lg fw-bold">Start Shopping</a></p>
      <% } %>
    <% } else { %>
      <p class="lead">Please <a href="/login" class="btn btn-warning btn-lg fw-bold">Login</a> or <a href="/register" class="btn btn-success btn-lg fw-bold">Register</a> to start shopping!</p>
    <% } %>
  </div>

  <!-- Featured Products Section -->
  <div class="container mt-5">
    <h2 class="text-center mb-4">Featured Products</h2>
    <div class="row row-cols-1 row-cols-md-3 g-4">
      <% products.forEach(product => { %>
        <div class="col">
          <div class="card product-card h-100 shadow-sm">
            <img src="images/<%= product.image %>" class="card-img-top" alt="<%= product.productName %>">
            <div class="card-body text-center">
              <h5 class="card-title"><%= product.productName %></h5>
              <p class="card-text">$<%= product.price.toFixed(2) %></p>
              <% if (user && user.role !== 'admin') { %>
                <a href="/shopping" class="btn btn-primary">Buy Now</a>
              <% } else { %>
                <span class="text-muted">Login to buy</span>
              <% } %>
            </div>
          </div>
        </div>
      <% }) %>
    </div>
  </div>

  <!-- Footer -->
  <footer class="text-center mt-5">
    &copy; <%= new Date().getFullYear() %> Supermarket App. All Rights Reserved.
  </footer>
</body>
</html>
