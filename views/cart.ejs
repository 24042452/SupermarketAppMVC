<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <link rel="stylesheet" href="/css/theme.css">
  <title>Shopping Cart</title>

  <style>
    body {
      background: radial-gradient(circle at 10% 20%, #e8f0ff 0, #f7f9fc 28%, #eef2f6 60%);
      font-family: 'Segoe UI', sans-serif;
      color: #0f172a;
    }

    .section-title {
      font-size: 2.1rem;
      font-weight: 800;
      margin-bottom: 24px;
      letter-spacing: -0.02em;
      color: #0b1c40;
    }

    .cart-item {
      background: linear-gradient(135deg, #ffffff 0%, #f9fbff 80%);
      border-radius: 14px;
      padding: 18px;
      margin-bottom: 18px;
      display: flex;
      align-items: center;
      gap: 20px;
      transition: 0.2s ease;
      border: 1px solid #e2e8f0;
      box-shadow: 0 8px 18px rgba(15, 23, 42, 0.06);
    }

    .cart-item:hover {
      box-shadow: 0 12px 26px rgba(15, 23, 42, 0.12);
      transform: translateY(-2px);
    }

    .cart-item img {
      width: 120px;
      height: 120px;
      object-fit: contain;
      background: #f8fbff;
      border-radius: 12px;
      padding: 10px;
      border: 1px solid #e2e8f0;
    }

    .product-title {
      font-size: 1.15rem;
      font-weight: 700;
      margin-bottom: 5px;
      color: #0f172a;
    }

    .price {
      font-size: 1rem;
      color: #0f3d8a;
      font-weight: 700;
    }

    .subtotal {
      font-size: 1rem;
      font-weight: 700;
      margin-top: 5px;
      color: #0b1c40;
    }

    .btn-action {
      border-radius: 10px;
      font-weight: 700;
      letter-spacing: 0.01em;
    }

    .summary-box {
      background: linear-gradient(135deg, #ffffff 0%, #f9fbff 80%);
      padding: 22px;
      border-radius: 16px;
      box-shadow: 0 8px 18px rgba(15, 23, 42, 0.06);
      border: 1px solid #e2e8f0;
    }

    .summary-box h5 {
      font-size: 1.3rem;
      font-weight: 800;
      color: #0b1c40;
    }

    .summary-box p { font-size: 1rem; }
    .summary-box strong { font-size: 1.15rem; }
  </style>
</head>

<body>
  <%- include('partials/navbar', { user: user, cart: cart }) %>

  <div class="container my-5">

    <h2 class="section-title">Your Shopping Cart</h2>
    <% if (messages && messages.length) { %>
      <div class="alert alert-danger"><%= messages.join('<br>') %></div>
    <% } %>
    <% if (success && success.length) { %>
      <div class="alert alert-success"><%= success.join('<br>') %></div>
    <% } %>

    <% if (cart.length === 0) { %>

      <p class="text-center text-muted">Your cart is empty.</p>
      <div class="text-center mt-3">
        <a href="/" class="btn btn-primary px-4 py-2">Continue Shopping</a>
      </div>

    <% } else { %>

      <div class="row">

        <!-- CART ITEMS -->
        <div class="col-lg-8">
          <% let total = 0; %>

          <% cart.forEach(item => { %>
            <% total += item.price * item.quantity; %>

            <div class="cart-item">

              <img src="/images/<%= item.image %>" alt="<%= item.productName %>">

              <div class="flex-grow-1">

                <p class="product-title"><%= item.productName %></p>

                <p class="price">$<%= Number(item.price).toFixed(2) %></p>

                <p class="mb-1">Qty: <strong><%= item.quantity %></strong></p>

                <p class="subtotal">
                  Subtotal: $<%= (Number(item.price) * item.quantity).toFixed(2) %>
                </p>
                <div class="d-flex gap-2 align-items-center mt-2 flex-wrap">
                  <form action="/cart/update/<%= item.id || item.productId %>" method="POST" class="d-flex gap-2 align-items-center">
                    <div class="input-group input-group-sm" style="width: 160px;">
                      <button type="button" class="btn btn-outline-secondary btn-qty-change" data-change="-1">-</button>
                      <input 
                        type="number" 
                        name="quantity" 
                        min="1" 
                        step="1" 
                        inputmode="numeric"
                        class="form-control text-center" 
                        value="<%= item.quantity %>">
                      <button type="button" class="btn btn-outline-secondary btn-qty-change" data-change="1">+</button>
                    </div>
                    <button class="btn btn-primary btn-sm btn-action">Update</button>
                  </form>
                  <form action="/cart/remove/<%= item.id || item.productId %>" method="POST">
                    <button class="btn btn-danger btn-sm btn-action">Remove</button>
                  </form>
                </div>

              </div>
            </div>

          <% }) %>
        </div>

        <!-- SUMMARY -->
        <div class="col-lg-4">
          <div class="summary-box">

            <h5>Order Summary</h5>
            <hr>

            <p class="d-flex justify-content-between mb-2">
              <span>Total</span>
              <strong>$<%= total.toFixed(2) %></strong>
            </p>

            <form action="/checkout" method="GET" class="d-grid gap-2 mt-3">
              <button class="btn btn-success btn-action py-2">Proceed to Checkout</button>
            </form>

            <form action="/cart/clear" method="POST" class="d-grid gap-2 mt-2">
              <button class="btn btn-warning btn-action py-2">Clear Cart</button>
            </form>

            <a href="/" class="btn btn-secondary btn-action w-100 mt-2 py-2">
              Continue Shopping
            </a>

          </div>
        </div>

      </div>

    <% } %>

  </div>

</body>
<script>
  // Simple quantity +/- controls enforcing minimum of 1
  document.querySelectorAll('.btn-qty-change').forEach(btn => {
    btn.addEventListener('click', (e) => {
      const input = e.target.closest('.input-group').querySelector('input[name="quantity"]');
      if (!input) return;
      const delta = Number(e.target.dataset.change || 0);
      const current = Number(input.value) || 1;
      const next = Math.max(1, current + delta);
      input.value = next;
    });
  });
</script>
</html>
