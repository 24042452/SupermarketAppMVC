<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
  <title>Shopping Cart</title>
  <style>
    body {
      background: #F6FAFE;
    }
    .navbar {
      box-shadow: 0 3px 6px rgba(0,0,0,0.04);
    }
    .cart-card {
      border-radius: 15px;
      border: none;
      box-shadow: 0 3px 8px rgba(0,0,0,0.03);
      background: #fff;
      margin-bottom: 20px;
      overflow: hidden;
      transition: transform 0.3s, box-shadow 0.3s;
    }
    .cart-card:hover {
      transform: translateY(-2px);
      box-shadow: 0 8px 24px rgba(0,0,0,0.12);
    }
    .cart-image {
      width: 100%;
      height: 150px;
      object-fit: contain;
      background: #F3F5F9;
      padding: 10px;
    }
    .card-body {
      padding: 15px;
      display: flex;
      flex-direction: column;
      gap: 10px;
    }
    .card-title {
      font-weight: 700;
      font-size: 1.1rem;
      color: #222;
    }
    .price {
      font-weight: 600;
      font-size: 1rem;
      color: #2C98F0;
    }
    .quantity {
      font-size: 0.95rem;
      color: #555;
    }
    .subtotal {
      font-weight: 600;
      font-size: 1rem;
    }
    .btn-action {
      border-radius: 7px;
      font-weight: 500;
      margin-top: 5px;
    }
    .checkout-section {
      text-align: right;
      margin-top: 20px;
    }
    @media (max-width: 767px) {
      .cart-card {
        flex-direction: column;
      }
      .card-body {
        text-align: center;
      }
      .checkout-section {
        text-align: center;
      }
    }
  </style>
</head>
<body>
  <%- include('partials/navbar', { user: user, cart: cart }) %>

  <div class="container my-5">
    <% if (user) { %>
      <p class="fw-semibold">Welcome, <%= user.username %> (<%= user.role %>)</p>
    <% } else { %>
      <p class="fw-semibold">Welcome, Guest</p>
    <% } %>

    <h2 class="fw-bold mb-4" style="letter-spacing:.01em;">Shopping Cart</h2>

    <% if (cart.length === 0) { %>
      <p class="text-center text-muted">Your cart is empty.</p>
      <div class="text-center mt-3">
        <a href="/" class="btn btn-primary btn-action">Return to Shopping</a>
      </div>
    <% } else { %>
      <div class="row row-cols-1 row-cols-md-2 g-4">
        <% let total = 0; %>
        <% cart.forEach(item => { %>
          <% total += item.price * item.quantity %>
          <div class="col">
            <div class="card cart-card h-100">
              <div class="row g-0">
                <div class="col-4 col-md-3 d-flex align-items-center justify-content-center">
                  <img src="/images/<%= item.productImage || 'placeholder.png' %>" alt="<%= item.productName %>" class="cart-image">
                </div>
                <div class="col-8 col-md-9">
                  <div class="card-body">
                    <h5 class="card-title"><%= item.productName %></h5>
                    <p class="price">$<%= item.price.toFixed(2) %></p>
                    <p class="quantity">Quantity: <%= item.quantity %></p>
                    <p class="subtotal">Subtotal: $<%= (item.price * item.quantity).toFixed(2) %></p>
                    <!-- Remove Item Button -->
                    <form action="/cart/remove/<%= item.productId %>" method="POST">
                      <button type="submit" class="btn btn-danger btn-sm btn-action">Remove Item</button>
                    </form>
                  </div>
                </div>
              </div>
            </div>
          </div>
        <% }) %>
      </div>

      <div class="checkout-section">
        <h5 class="fw-semibold">Total: $<%= total.toFixed(2) %></h5>
        <form action="/checkout" method="POST" style="display:inline-block;">
          <button type="submit" class="btn btn-success btn-action">Checkout</button>
        </form>
        <form action="/cart/clear" method="POST" style="display:inline-block;">
          <button type="submit" class="btn btn-warning btn-action">Clear Cart</button>
        </form>
        <a href="/" class="btn btn-primary btn-action">Return to Shopping</a>
      </div>
    <% } %>
  </div>
</body>
</html>
