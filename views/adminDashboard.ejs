<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <link rel="stylesheet" href="/css/theme.css">
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
  <title>Admin Dashboard</title>
  <style>
    body { 
      background: radial-gradient(circle at 10% 20%, #e8f0ff 0, #f7f9fc 28%, #eef2f6 60%); 
      color: #0f172a;
      font-family: 'Segoe UI', sans-serif;
    }
    .card { border: 1px solid #e2e8f0; border-radius: 16px; box-shadow: 0 8px 24px rgba(15,23,42,0.08); }
    .badge-status { text-transform: capitalize; }
    .table-row-link { color: inherit; text-decoration: none; display: block; }
    .table-row-link:hover { color: #0f3d8a; text-decoration: underline; }
  </style>
</head>
<body>
  <%- include('partials/adminNavbar', { user: user }) %>

  <div class="container py-4">
    <h2 class="mb-4 fw-bold">Dashboard</h2>

    <div class="row g-3 mb-4">
      <div class="col-md-3">
        <div class="card p-3 text-center">
          <small class="text-muted">Products</small>
          <div class="fs-2 fw-bold"><%= counts.products %></div>
        </div>
      </div>
      <div class="col-md-3">
        <div class="card p-3 text-center">
          <small class="text-muted">Users</small>
          <div class="fs-2 fw-bold"><%= counts.users %></div>
        </div>
      </div>
      <div class="col-md-3">
        <div class="card p-3 text-center">
          <small class="text-muted">Orders</small>
          <div class="fs-2 fw-bold"><%= counts.orders %></div>
        </div>
      </div>
      <div class="col-md-3">
        <div class="card p-3 text-center">
          <small class="text-muted">Pending</small>
          <div class="fs-2 fw-bold text-warning"><%= counts.pending %></div>
        </div>
      </div>
    </div>

    <div class="row g-3 mb-4">
      <div class="col-md-6">
        <div class="card p-3">
          <small class="text-muted">Out for Delivery</small>
          <div class="fs-3 fw-bold text-primary"><%= counts.delivery %></div>
        </div>
      </div>
      <div class="col-md-6">
        <div class="card p-3">
          <small class="text-muted">Delivered</small>
          <div class="fs-3 fw-bold text-success"><%= counts.delivered %></div>
        </div>
      </div>
    </div>

    <div class="card p-3">
      <div class="d-flex justify-content-between align-items-center mb-3">
        <h5 class="mb-0">Recent Orders</h5>
        <a href="/admin/orders" class="btn btn-sm btn-outline-primary">View all</a>
      </div>
      <div class="table-responsive">
        <table class="table table-sm align-middle">
          <thead>
            <tr>
              <th>ID</th>
              <th>User</th>
              <th>Address</th>
              <th>Total</th>
              <th>Date</th>
              <th>Status</th>
            </tr>
          </thead>
          <tbody>
            <% if (recentOrders.length === 0) { %>
              <tr><td colspan="6" class="text-center text-muted py-3">No orders yet.</td></tr>
            <% } else { %>
              <% recentOrders.forEach(o => { %>
                <% 
                  const statusLower = (o.status || '').toLowerCase();
                  let statusClass = '';
                  let statusLabel = o.status;
                  if (statusLower === 'pending') { statusClass = 'badge-status-pending'; statusLabel = 'Pending'; }
                  else if (statusLower === 'delivery') { statusClass = 'badge-status-delivery'; statusLabel = 'Delivery'; }
                  else if (statusLower === 'delivered') { statusClass = 'badge-status-delivered'; statusLabel = 'Delivered'; }
                %>
                <tr>
                  <td><a class="table-row-link fw-semibold" href="/orders/<%= o.id %>">#<%= o.id %></a></td>
                  <td><%= o.username %> (<%= o.email %>)</td>
                  <td><%= o.address || 'N/A' %></td>
                  <td>$<%= o.total %></td>
                  <td><%= o.order_date %></td>
                  <td>
                    <span class="badge badge-status <%= statusClass %>"><%= statusLabel %></span>
                  </td>
                </tr>
              <% }) %>
            <% } %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</body>
</html>
