<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
  <title>Admin Dashboard</title>
  <style>
    body { background: #f5f7fb; }
    .card { border: none; border-radius: 14px; box-shadow: 0 6px 18px rgba(0,0,0,0.06); }
    .badge-status { text-transform: capitalize; }
  </style>
</head>
<body>
  <%- include('partials/adminNavbar', { user: user }) %>

  <div class="container py-4">
    <h2 class="mb-4 fw-bold">Dashboard</h2>

    <div class="row g-3 mb-4">
      <div class="col-md-3">
        <div class="card p-3 text-center">
          <small class="text-muted">Products</small>
          <div class="fs-2 fw-bold"><%= counts.products %></div>
        </div>
      </div>
      <div class="col-md-3">
        <div class="card p-3 text-center">
          <small class="text-muted">Users</small>
          <div class="fs-2 fw-bold"><%= counts.users %></div>
        </div>
      </div>
      <div class="col-md-3">
        <div class="card p-3 text-center">
          <small class="text-muted">Orders</small>
          <div class="fs-2 fw-bold"><%= counts.orders %></div>
        </div>
      </div>
      <div class="col-md-3">
        <div class="card p-3 text-center">
          <small class="text-muted">Pending</small>
          <div class="fs-2 fw-bold text-warning"><%= counts.pending %></div>
        </div>
      </div>
    </div>

    <div class="row g-3 mb-4">
      <div class="col-md-6">
        <div class="card p-3">
          <small class="text-muted">Out for Delivery</small>
          <div class="fs-3 fw-bold text-primary"><%= counts.delivery %></div>
        </div>
      </div>
      <div class="col-md-6">
        <div class="card p-3">
          <small class="text-muted">Delivered</small>
          <div class="fs-3 fw-bold text-success"><%= counts.delivered %></div>
        </div>
      </div>
    </div>

    <div class="card p-3">
      <div class="d-flex justify-content-between align-items-center mb-3">
        <h5 class="mb-0">Recent Orders</h5>
        <a href="/admin/orders" class="btn btn-sm btn-outline-primary">View all</a>
      </div>
      <div class="table-responsive">
        <table class="table table-sm align-middle">
          <thead>
            <tr>
              <th>ID</th>
              <th>User</th>
              <th>Total</th>
              <th>Date</th>
              <th>Status</th>
            </tr>
          </thead>
          <tbody>
            <% if (recentOrders.length === 0) { %>
              <tr><td colspan="5" class="text-center text-muted py-3">No orders yet.</td></tr>
            <% } else { %>
              <% recentOrders.forEach(o => { %>
                <tr>
                  <td>#<%= o.id %></td>
                  <td><%= o.username %> (<%= o.email %>)</td>
                  <td>$<%= o.total %></td>
                  <td><%= o.order_date %></td>
                  <td>
                    <span class="badge bg-secondary badge-status"><%= o.status %></span>
                  </td>
                </tr>
              <% }) %>
            <% } %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</body>
</html>
