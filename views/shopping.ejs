<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Supermarket App - Shop</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
  <style>
    body {
      background: #F6FAFE;
    }
    .navbar {
      box-shadow: 0 3px 6px rgba(0,0,0,0.04);
    }
    .product-card {
      border-radius: 15px;
      border: none;
      box-shadow: 0 3px 8px rgba(0,0,0,0.03);
      transition: box-shadow 0.3s, transform 0.3s;
      background: #fff;
      overflow: hidden;
      position: relative;
    }
    .product-card:hover {
      box-shadow: 0 8px 24px rgba(0,0,0,0.12);
      transform: translateY(-3px) scale(1.03);
    }
    .product-image {
      width: 100%;
      height: 170px;
      object-fit: contain;
      background: #F3F5F9;
      padding: 10px;
    }
    .card-title {
      font-size: 1.15rem;
      font-weight: 700;
      color: #222;
    }
    .price {
      font-size: 1.05rem;
      font-weight: 600;
      color: #2C98F0;
      margin-bottom: 4px;
    }
    .card-body {
      padding: 18px 15px 15px 15px;
      display: flex;
      flex-direction: column;
      gap: 5px;
    }
    .btn-primary, .btn-secondary {
      border-radius: 7px;
      font-weight: 500;
      letter-spacing: .01em;
    }
    .select-quantity {
      min-width: 80px;
    }
    .search-box {
      background: #fff;
      border-radius: 12px;
      padding: 18px;
      box-shadow: 0 3px 8px rgba(0,0,0,0.05);
    }
  </style>
</head>
<body>

  <%- include('partials/navbar', { user: user, cart: cart }) %>

  <!-- HERO SECTION -->
  <section class="py-5" style="background: linear-gradient(135deg, #2C98F0, #6EC8FF);">
    <div class="container text-center text-white py-5">
      <% if (!user) { %>
        <h1 class="fw-bold mb-3">Welcome to Supermarket App</h1>
        <p class="lead mb-4">Shop fresh groceries, household essentials, and more.</p>
        <div class="d-flex justify-content-center gap-3">
          <a href="/login" class="btn btn-light px-4 py-2 fw-semibold shadow-sm">Login</a>
          <a href="/register" class="btn btn-outline-light px-4 py-2 fw-semibold">Register</a>
        </div>
      <% } else { %>
        <h1 class="fw-bold mb-2">Welcome, <%= user.username %>!</h1>
        <p class="lead">Browse our products and enjoy your shopping experience.</p>
      <% } %>
    </div>
  </section>

  <!-- PRODUCT SECTION -->
  <div class="container my-5 px-3">

    <h2 class="text-center fw-bold mb-4" style="letter-spacing:.01em;">Products</h2>

    <!-- SEARCH BAR -->
    <form method="GET" action="/" class="search-box mb-5">
      <div class="row g-3 align-items-center">
        <div class="col-md-10">
          <input 
            type="text" 
            name="search" 
            class="form-control form-control-lg" 
            placeholder="Search products by name..." 
            value="<%= typeof search !== 'undefined' ? search : '' %>"
          >
        </div>
        <div class="col-md-2 d-grid">
          <button class="btn btn-primary btn-lg">Search</button>
        </div>
      </div>
    </form>

    <% if (products.length === 0) { %>
      <p class="text-center text-muted">No products found.</p>
    <% } else { %>
      <div class="row row-cols-1 row-cols-md-3 g-4">
        <% products.forEach(product => { %>
          <div class="col d-flex">
            <div class="card product-card h-100 shadow-sm w-100">
              <img src="images/<%= product.image %>" alt="<%= product.productName %>" class="card-img-top product-image">
              <div class="card-body d-flex flex-column">
                <h5 class="card-title"><%= product.productName %></h5>
                <p class="price">$<%= product.price.toFixed(2) %></p>

                <% if (user) { %>
                  <form action="/add-to-cart/<%= product.id %>" method="POST" class="mt-auto">
                    <div class="mb-2">
                      <label class="form-label fw-medium">Quantity:</label>
                      <select class="form-select select-quantity" name="quantity">
                        <% for (let q = 1; q <= 5; q++) { %>
                          <option value="<%= q %>"><%= q %></option>
                        <% } %>
                      </select>
                    </div>
                    <button type="submit" class="btn btn-primary w-100">Add to Cart</button>
                  </form>
                <% } else { %>
                  <a href="/login" class="btn btn-secondary w-100 mt-auto">Login to Buy</a>
                <% } %>

              </div>
            </div>
          </div>
        <% }) %>
      </div>
    <% } %>

  </div>
</body>
</html>
