<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Supermarket App</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
  <style>
    body {
      background: #F6FAFE;
    }
    .navbar {
      box-shadow: 0 3px 6px rgba(0,0,0,0.04);
    }
    .product-card {
      border-radius: 15px;
      border: none;
      box-shadow: 0 3px 8px rgba(0,0,0,0.03);
      transition: box-shadow 0.3s, transform 0.3s;
      background: #fff;
      overflow: hidden;
      position: relative;
    }
    .product-card:hover {
      box-shadow: 0 8px 24px rgba(0,0,0,0.12);
      transform: translateY(-3px) scale(1.03);
    }
    .product-image {
      width: 100%;
      height: 170px;
      object-fit: contain;
      background: #F3F5F9;
      padding: 10px;
    }
    .card-title {
      font-size: 1.15rem;
      font-weight: 700;
      color: #222;
    }
    .price {
      font-size: 1.05rem;
      font-weight: 600;
      color: #2C98F0;
      margin-bottom: 4px;
    }
    .card-body {
      padding: 18px 15px 15px 15px;
      display: flex;
      flex-direction: column;
      gap: 5px;
    }
    .btn-primary, .btn-secondary {
      border-radius: 7px;
      font-weight: 500;
      letter-spacing: .01em;
    }
    .cart-dropdown {
      position: absolute;
      top: 100%;
      right: 0;
      min-width: 250px;
      background: #fff;
      padding: 12px;
      border-radius: 10px;
      box-shadow: 0 8px 24px rgba(0,0,0,0.14);
      display: none;
      z-index: 1000;
    }
    .cart-dropdown p, .cart-dropdown span {
      color: #222;
      margin: 0;
    }
    .cart:hover .cart-dropdown {
      display: block;
    }
    .cart .nav-link {
      position: relative;
      font-weight: 500;
      color: #fff;
    }
    .cart .nav-link::after {
      content: '';
      display: block;
      width: 12px;
      height: 12px;
      background: #EB4D4B;
      border-radius: 50%;
      position: absolute;
      top: -6px;
      right: -10px;
      border: 2px solid #fff;
      transition: opacity 0.2s;
    }
    .select-quantity {
      min-width: 80px;
    }
  </style>
</head>
<body>
  <!-- Navbar -->
  <nav class="navbar navbar-expand-sm bg-dark navbar-dark">
    <div class="container-fluid">
      <a class="navbar-brand fw-bold" href="/">Supermarket App</a>
      <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#collapsibleNavbar">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="collapsibleNavbar">
        <ul class="navbar-nav ms-auto align-items-center">
          <% if (user) { %>
            <li class="nav-item me-3 text-white">
              Hello, <%= user.username %>
            </li>
            <li class="nav-item dropdown cart position-relative me-3">
              <a class="nav-link" href="/cart"><i class="bi bi-cart3"></i> Cart (<%= cart ? cart.length : 0 %>)</a>
              <div class="cart-dropdown">
                <% if (!cart || cart.length === 0) { %>
                  <p class="mb-0 text-muted">Your cart is empty.</p>
                <% } else { %>
                  <% cart.forEach(item => { %>
                    <div class="d-flex justify-content-between mb-1">
                      <span class="fw-medium"><%= item.productName %> x <%= item.quantity %></span>
                      <span class="fw-bold text-success">$<%= (item.price * item.quantity).toFixed(2) %></span>
                    </div>
                  <% }) %>
                <% } %>
              </div>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="/logout">Logout</a>
            </li>
          <% } else { %>
            <li class="nav-item">
              <a class="nav-link" href="/login">Login</a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="/register">Register</a>
            </li>
          <% } %>
        </ul>
      </div>
    </div>
  </nav>

  <div class="container my-5 px-3">
    <h2 class="text-center fw-bold mb-5" style="letter-spacing:.01em;">Products</h2>

    <div class="row row-cols-1 row-cols-md-3 g-4">
      <% products.forEach(product => { %>
        <div class="col d-flex">
          <div class="card product-card h-100 shadow-sm w-100">
            <img src="images/<%= product.image %>" alt="<%= product.productName %>" class="card-img-top product-image">
            <div class="card-body d-flex flex-column">
              <h5 class="card-title"><%= product.productName %></h5>
              <p class="price">$<%= product.price.toFixed(2) %></p>
              
              <% if (user) { %>
                <form action="/add-to-cart/<%= product.id %>" method="POST" class="mt-auto">
                  <div class="mb-2">
                    <label for="quantity-<%= product.id %>" class="form-label fw-medium">Quantity:</label>
                    <select class="form-select select-quantity" id="quantity-<%= product.id %>" name="quantity">
                      <% for (let q = 1; q <= 5; q++) { %>
                        <option value="<%= q %>"><%= q %></option>
                      <% } %>
                    </select>
                  </div>
                  <button type="submit" class="btn btn-primary btn-block w-100">Add to Cart</button>
                </form>
              <% } else { %>
                <a href="/login" class="btn btn-secondary w-100 mt-auto">Login to Buy</a>
              <% } %>
            </div>
          </div>
        </div>
      <% }) %>
    </div>
  </div>
</body>
</html>
