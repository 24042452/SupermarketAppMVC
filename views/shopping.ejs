<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <link rel="stylesheet" href="/css/theme.css">
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css">
  <title>Supermarket App</title>
  <style>
    body {
      background: #faf7f2;
      font-family: 'Segoe UI', sans-serif;
      color: #111827;
    }

    .hero-section {
      background: linear-gradient(135deg, #f3efe8 0%, #fff1e7 60%, #e6f6ea 100%);
      padding: 36px 0;
      min-height: 220px;
      display: flex;
      align-items: center;
    }

    .hero {
      background: transparent;
      padding: 28px 0;
    }

    .hero h1 {
      font-weight: 800;
      font-size: 2.5rem;
      line-height: 1.1;
      margin-bottom: 12px;
    }

    .hero h1 span {
      color: #22c55e;
    }

    .hero p {
      color: #4b5563;
      max-width: 520px;
      margin-bottom: 20px;
    }

    .hero .btn {
      border-radius: 999px;
      padding: 10px 24px;
      font-weight: 700;
      background: #22c55e;
      border: none;
    }

    .hero .btn:hover {
      background: #16a34a;
    }

    .section-title {
      font-size: 1.4rem;
      font-weight: 700;
      margin-bottom: 18px;
    }

    .category-grid {
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(140px, 1fr));
      gap: 16px;
    }

    .category-card {
      background: #fff;
      border: 1px solid #ececec;
      border-radius: 14px;
      padding: 18px 14px;
      text-align: center;
      text-decoration: none;
      color: #111827;
      box-shadow: 0 8px 16px rgba(17, 24, 39, 0.05);
      transition: transform 0.2s ease, box-shadow 0.2s ease;
    }

    .category-card:hover {
      transform: translateY(-2px);
      box-shadow: 0 12px 22px rgba(17, 24, 39, 0.08);
      color: #111827;
    }

    .category-icon {
      width: 46px;
      height: 46px;
      border-radius: 14px;
      background: #e6f6ea;
      display: inline-flex;
      align-items: center;
      justify-content: center;
      font-weight: 700;
      color: #22c55e;
      margin-bottom: 8px;
      font-size: 1.25rem;
    }

    .promo-bar {
      background: #22c55e;
      color: #fff;
      border-radius: 0;
      padding: 12px 16px;
      text-align: center;
      font-weight: 600;
      margin: 26px 0;
    }

    .product-grid {
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(210px, 1fr));
      gap: 18px;
    }

    .product-card {
      background: #fff;
      border-radius: 16px;
      border: 1px solid #ececec;
      box-shadow: 0 10px 22px rgba(17, 24, 39, 0.06);
      overflow: hidden;
      display: flex;
      flex-direction: column;
    }

    .product-image {
      width: 100%;
      height: 180px;
      object-fit: contain;
      background: #fff;
    }

    .product-body {
      padding: 14px 14px 16px;
      display: grid;
      gap: 8px;
    }

    .product-title {
      font-size: 1rem;
      font-weight: 700;
      color: #111827;
      text-decoration: none;
    }

    .product-meta {
      color: #6b7280;
      font-size: 0.9rem;
    }

    .product-footer {
      display: flex;
      align-items: center;
      justify-content: space-between;
      margin-top: 4px;
    }

    .product-price {
      font-weight: 700;
      color: #111827;
    }

    .add-btn {
      width: 30px;
      height: 30px;
      border-radius: 50%;
      border: none;
      background: #22c55e;
      color: #fff;
      font-weight: 700;
      line-height: 1;
    }

    .add-btn:hover {
      background: #16a34a;
    }

    .feature-row {
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
      gap: 20px;
      margin-top: 36px;
      text-align: center;
    }

    .feature-card {
      padding: 16px;
    }

    .feature-icon {
      width: 42px;
      height: 42px;
      border-radius: 12px;
      background: #e6f6ea;
      display: inline-flex;
      align-items: center;
      justify-content: center;
      font-weight: 700;
      color: #22c55e;
      margin-bottom: 10px;
      font-size: 1.1rem;
    }

    .feature-title {
      font-weight: 700;
      margin-bottom: 4px;
    }

    .feature-text {
      color: #6b7280;
      font-size: 0.9rem;
    }
  </style>
</head>
<body>
  <%- include('partials/navbar', { user: user, cart: cart }) %>

  <% 
    const categoryOptions = ['fruits', 'vegetable', 'baked', 'beverage', 'raw'];
    const labelMap = {
      fruits: 'Fruits',
      vegetable: 'Vegetables',
      baked: 'Baked',
      beverage: 'Beverage',
      raw: 'Raw Food'
    };

    const iconMap = {
      fruits: '🍎',
      vegetable: '🥕',
      baked: '🥖',
      beverage: '🥛',
      raw: '🥩'
    };

    const guessCategory = (product) => {
      const fromField = (product.category || '').toLowerCase();
      if (fromField) return fromField;
      const name = (product.productName || '').toLowerCase();
      if (name.match(/banana|apple/)) return 'fruits';
      if (name.match(/tomato|broccoli|carrot/)) return 'vegetable';
      if (name.includes('bread')) return 'baked';
      if (name.includes('milk')) return 'beverage';
      if (name.match(/chicken|beef|pork|fish|salmon|steak|meat/)) return 'raw';
      return '';
    };

    const present = new Set();
    products.forEach((product) => {
      const cat = guessCategory(product);
      if (categoryOptions.includes(cat)) present.add(cat);
    });
    const categoriesToShow = categoryOptions.filter((cat) => present.has(cat));
    const categories = categoriesToShow.length ? categoriesToShow : categoryOptions;
    const featuredProducts = products.slice(0, 8);
  %>

  <section class="hero-section">
    <div class="container">
      <div class="hero">
        <h1>Fresh Groceries <span>Delivered Daily</span></h1>
        <p>Quality produce, meats, dairy, baked goods, and beverages delivered to your door. Shop with guaranteed freshness.</p>
        <a href="/" class="btn btn-success">Shop Now</a>
      </div>
    </div>
  </section>

  <div class="container">
    <section class="mt-5">
      <div class="section-title">Shop by Category</div>
      <div class="category-grid">
        <% categories.forEach((cat) => { %>
          <a class="category-card" href="/?category=<%= cat %>">
            <div class="category-icon" aria-hidden="true"><%= iconMap[cat] %></div>
            <div class="fw-semibold"><%= labelMap[cat] %></div>
          </a>
        <% }) %>
      </div>
    </section>
  </div>

  <div class="promo-bar mt-4">Free Delivery on Orders Over $50 | Same-Day Delivery Available</div>

  <div class="container">
    <section class="mt-4">
      <div class="d-flex justify-content-between align-items-center mb-3">
        <div class="section-title mb-0">Featured Products</div>
        <a href="/" class="text-decoration-none" style="color:#22c55e; font-weight:600;">View All</a>
      </div>

      <% if (featuredProducts.length === 0) { %>
        <p class="text-center text-muted">No products found.</p>
      <% } else { %>
        <div class="product-grid">
          <% featuredProducts.forEach(product => { %>
            <div class="product-card">
              <img src="images/<%= product.image %>" alt="<%= product.productName %>" class="product-image">
              <div class="product-body">
                <a class="product-title" href="/product/<%= product.id %>"><%= product.productName %></a>
                <div class="product-meta">per item</div>
                <div class="product-footer">
                  <div class="product-price">$<%= Number(product.price).toFixed(2) %></div>
                  <% if (user) { %>
                    <form action="/add-to-cart/<%= product.id %>" method="POST">
                      <input type="hidden" name="quantity" value="1">
                      <button type="submit" class="add-btn" aria-label="Add to cart">+</button>
                    </form>
                  <% } else { %>
                    <a href="/login" class="add-btn d-inline-flex align-items-center justify-content-center text-decoration-none">+</a>
                  <% } %>
                </div>
              </div>
            </div>
          <% }) %>
        </div>
      <% } %>
    </section>

    <section class="feature-row">
      <div class="feature-card">
        <div class="feature-icon" aria-hidden="true">🚚</div>
        <div class="feature-title">Fast Delivery</div>
        <div class="feature-text">Same-day delivery available in select areas.</div>
      </div>
      <div class="feature-card">
        <div class="feature-icon" aria-hidden="true">✅</div>
        <div class="feature-title">Fresh Guarantee</div>
        <div class="feature-text">Freshness guaranteed.</div>
      </div>
      <div class="feature-card">
        <div class="feature-icon" aria-hidden="true">🔒</div>
        <div class="feature-title">Secure Payment</div>
        <div class="feature-text">Safe and secure payment processing.</div>
      </div>
    </section>
  </div>
</body>
</html>
