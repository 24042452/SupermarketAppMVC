<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Supermarket App - Shop</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <link rel="stylesheet" href="/css/theme.css">
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css">
  <style>
    body {
      background: radial-gradient(circle at 10% 20%, #e8f0ff 0, #f7f9fc 28%, #eef2f6 60%);
      font-family: 'Segoe UI', sans-serif;
      color: #0f172a;
    }
    .navbar { box-shadow: 0 4px 8px rgba(0,0,0,0.08); }
    /* HERO SECTION */
    .hero-section {
      background: linear-gradient(135deg, #2C98F0, #6EC8FF);
      border-bottom-left-radius: 50% 10%;
      border-bottom-right-radius: 50% 10%;
      padding: 6rem 1rem 4rem 1rem;
      color: white;
      text-align: center;
    }
    .hero-section h1 {
      font-size: 3rem;
      font-weight: 700;
      text-shadow: 0 2px 8px rgba(0,0,0,0.2);
    }
    .hero-section p {
      font-size: 1.25rem;
      margin-bottom: 2rem;
    }
    .hero-section .btn {
      border-radius: 50px;
      font-weight: 600;
      padding: 0.75rem 2rem;
      transition: all 0.3s ease;
    }
    .hero-section .btn:hover {
      transform: translateY(-3px);
      box-shadow: 0 6px 15px rgba(0,0,0,0.2);
    }

    /* SEARCH BAR */
    .search-box {
      background: #fff;
      border-radius: 15px;
      padding: 20px;
      box-shadow: 0 6px 15px rgba(0,0,0,0.05);
      margin-bottom: 3rem;
    }

    /* PRODUCT CARDS */
    .product-card {
      border-radius: 20px;
      overflow: hidden;
      background: linear-gradient(145deg, #ffffff, #f1f3f6);
      border: none;
      box-shadow: 0 8px 20px rgba(0,0,0,0.06);
      transition: transform 0.3s ease, box-shadow 0.3s ease;
      display: flex;
      flex-direction: column;
    }
    .product-card:hover {
      transform: translateY(-6px);
      box-shadow: 0 12px 30px rgba(0,0,0,0.12);
    }
    .product-image {
      width: 100%;
      height: 180px;
      object-fit: contain;
      background: #f3f5f9;
      padding: 15px;
    }
    .card-body {
      display: flex;
      flex-direction: column;
      gap: 10px;
      padding: 18px 15px 20px 15px;
    }
    .card-title {
      font-size: 1.2rem;
      font-weight: 700;
      color: #222;
    }
    .price {
      font-size: 1.1rem;
      font-weight: 600;
      color: #2C98F0;
    }
    .btn-primary, .btn-secondary {
      border-radius: 50px;
      font-weight: 600;
      transition: all 0.3s ease;
    }
    .btn-primary:hover {
      transform: translateY(-2px);
      box-shadow: 0 6px 18px rgba(44,152,240,0.35);
    }
    .btn-secondary:hover {
      transform: translateY(-2px);
      box-shadow: 0 6px 18px rgba(108,200,255,0.3);
    }
    .select-quantity {
      min-width: 80px;
    }
  </style>
</head>
<body>

  <%- include('partials/navbar', { user: user, cart: cart }) %>

  <!-- HERO SECTION -->
  <section class="hero-section">
    <% if (!user) { %>
      <h1>Welcome to Supermarket App</h1>
      <p>Shop fresh groceries, household essentials, and more.</p>
      <div class="d-flex justify-content-center gap-3">
        <a href="/login" class="btn btn-light px-4 py-2">Login</a>
        <a href="/register" class="btn btn-outline-light px-4 py-2">Register</a>
      </div>
    <% } else { %>
      <h1>Welcome, <%= user.username %>!</h1>
      <p>Browse our products and enjoy your shopping experience.</p>
    <% } %>
  </section>

  <!-- PRODUCT SECTION -->
  <div class="container my-5 px-3">
    <h2 class="text-center fw-bold mb-4" style="letter-spacing:.01em;">Products</h2>

    <!-- SEARCH BAR -->
    <form method="GET" action="/" class="search-box mb-5">
      <div class="row g-3 align-items-center">
        <div class="col-lg-6">
          <input 
            type="text" 
            name="search" 
            class="form-control form-control-lg" 
            placeholder="Search products by name..." 
            value="<%= typeof search !== 'undefined' ? search : '' %>"
          >
        </div>
        <div class="col-lg-3">
          <select name="category" class="form-select form-select-lg">
            <option value="">All Types</option>
            <option value="fruits" <%= category === 'fruits' ? 'selected' : '' %>>Fruits</option>
            <option value="vegetable" <%= category === 'vegetable' ? 'selected' : '' %>>Vegetable</option>
            <option value="baked" <%= category === 'baked' ? 'selected' : '' %>>Baked</option>
            <option value="beverage" <%= category === 'beverage' ? 'selected' : '' %>>Beverage</option>
          </select>
        </div>
        <div class="col-lg-2">
          <select name="sort" class="form-select">
            <option value="">Sort</option>
            <option value="price-asc" <%= sort === 'price-asc' ? 'selected' : '' %>>Price: Low to High</option>
            <option value="price-desc" <%= sort === 'price-desc' ? 'selected' : '' %>>Price: High to Low</option>
            <option value="name-asc" <%= sort === 'name-asc' ? 'selected' : '' %>>Name: A to Z</option>
            <option value="name-desc" <%= sort === 'name-desc' ? 'selected' : '' %>>Name: Z to A</option>
          </select>
        </div>
        <div class="col-lg-1 d-grid">
          <button class="btn btn-primary btn-lg">Apply</button>
        </div>
      </div>
    </form>

    <% if (products.length === 0) { %>
      <p class="text-center text-muted">No products found.</p>
    <% } else { %>
      <div class="row row-cols-1 row-cols-md-3 g-4">
        <% products.forEach(product => { %>
          <div class="col d-flex">
            <div class="card product-card h-100 shadow-sm w-100">
              <img src="images/<%= product.image %>" alt="<%= product.productName %>" class="card-img-top product-image">
              <div class="card-body d-flex flex-column">
                <h5 class="card-title">
                  <a href="/product/<%= product.id %>" class="text-decoration-none text-dark"><%= product.productName %></a>
                </h5>
                <p class="price">$<%= Number(product.price).toFixed(2) %></p>
                <% const outOfStock = product.quantity <= 0; %>
                <% const lowStock = !outOfStock && product.quantity < 10; %>
                <div class="d-flex align-items-center gap-2">
                  <p class="text-muted small mb-1 mb-0">In stock: <%= product.quantity %></p>
                  <% if (lowStock) { %>
                    <span class="badge bg-warning text-dark">Low stock</span>
                  <% } %>
                  <% if (outOfStock) { %>
                    <span class="badge bg-danger">Out of stock</span>
                  <% } %>
                </div>

                <% if (user) { %>
                  <form action="/add-to-cart/<%= product.id %>" method="POST" class="mt-auto">
                    <div class="mb-2">
                      <label class="form-label fw-medium">Quantity:</label>
                      <input 
                        type="number" 
                        name="quantity" 
                        class="form-control select-quantity" 
                        min="1" 
                        max="<%= Math.max(product.quantity, 0) %>" 
                        value="1" 
                        <%= outOfStock ? 'disabled' : '' %> 
                        required
                      >
                      <small class="text-muted">Max available: <%= Math.max(product.quantity, 0) %></small>
                    </div>
                    <button type="submit" class="btn btn-primary w-100" <%= outOfStock ? 'disabled' : '' %>>Add to Cart</button>
                    <% if (outOfStock) { %>
                      <small class="text-danger">Out of stock</small>
                    <% } %>
                  </form>
                <% } else { %>
                  <a href="/login" class="btn btn-secondary w-100 mt-auto" <%= outOfStock ? 'aria-disabled=\"true\"' : '' %>>Login to Buy</a>
                  <% if (outOfStock) { %>
                    <small class="text-danger d-block mt-1">Out of stock</small>
                  <% } %>
                <% } %>

              </div>
            </div>
          </div>
        <% }) %>
      </div>
    <% } %>

  </div>
</body>
</html>
