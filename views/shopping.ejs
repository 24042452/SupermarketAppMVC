<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Supermarket App - Shop</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css">
  <style>
    body {
      background: #f5f7fa;
      font-family: 'Segoe UI', sans-serif;
    }
    .navbar {
      box-shadow: 0 4px 8px rgba(0,0,0,0.08);
    }
    /* HERO SECTION */
    .hero-section {
      background: linear-gradient(135deg, #2C98F0, #6EC8FF);
      border-bottom-left-radius: 50% 10%;
      border-bottom-right-radius: 50% 10%;
      padding: 6rem 1rem 4rem 1rem;
      color: white;
      text-align: center;
    }
    .hero-section h1 {
      font-size: 3rem;
      font-weight: 700;
      text-shadow: 0 2px 8px rgba(0,0,0,0.2);
    }
    .hero-section p {
      font-size: 1.25rem;
      margin-bottom: 2rem;
    }
    .hero-section .btn {
      border-radius: 50px;
      font-weight: 600;
      padding: 0.75rem 2rem;
      transition: all 0.3s ease;
    }
    .hero-section .btn:hover {
      transform: translateY(-3px);
      box-shadow: 0 6px 15px rgba(0,0,0,0.2);
    }

    /* SEARCH BAR */
    .search-box {
      background: #fff;
      border-radius: 15px;
      padding: 20px;
      box-shadow: 0 6px 15px rgba(0,0,0,0.05);
      margin-bottom: 3rem;
    }

    /* PRODUCT CARDS */
    .product-card {
      border-radius: 20px;
      overflow: hidden;
      background: linear-gradient(145deg, #ffffff, #f1f3f6);
      border: none;
      box-shadow: 0 8px 20px rgba(0,0,0,0.06);
      transition: transform 0.3s ease, box-shadow 0.3s ease;
      display: flex;
      flex-direction: column;
    }
    .product-card:hover {
      transform: translateY(-6px);
      box-shadow: 0 12px 30px rgba(0,0,0,0.12);
    }
    .product-image {
      width: 100%;
      height: 180px;
      object-fit: contain;
      background: #f3f5f9;
      padding: 15px;
    }
    .card-body {
      display: flex;
      flex-direction: column;
      gap: 10px;
      padding: 18px 15px 20px 15px;
    }
    .card-title {
      font-size: 1.2rem;
      font-weight: 700;
      color: #222;
    }
    .price {
      font-size: 1.1rem;
      font-weight: 600;
      color: #2C98F0;
    }
    .btn-primary, .btn-secondary {
      border-radius: 50px;
      font-weight: 600;
      transition: all 0.3s ease;
    }
    .btn-primary:hover {
      transform: translateY(-2px);
      box-shadow: 0 6px 18px rgba(44,152,240,0.35);
    }
    .btn-secondary:hover {
      transform: translateY(-2px);
      box-shadow: 0 6px 18px rgba(108,200,255,0.3);
    }
    .select-quantity {
      min-width: 80px;
    }
  </style>
</head>
<body>

  <%- include('partials/navbar', { user: user, cart: cart }) %>

  <!-- HERO SECTION -->
  <section class="hero-section">
    <% if (!user) { %>
      <h1>Welcome to Supermarket App</h1>
      <p>Shop fresh groceries, household essentials, and more.</p>
      <div class="d-flex justify-content-center gap-3">
        <a href="/login" class="btn btn-light px-4 py-2">Login</a>
        <a href="/register" class="btn btn-outline-light px-4 py-2">Register</a>
      </div>
    <% } else { %>
      <h1>Welcome, <%= user.username %>!</h1>
      <p>Browse our products and enjoy your shopping experience.</p>
    <% } %>
  </section>

  <!-- PRODUCT SECTION -->
  <div class="container my-5 px-3">
    <h2 class="text-center fw-bold mb-4" style="letter-spacing:.01em;">Products</h2>

    <!-- SEARCH BAR -->
    <form method="GET" action="/" class="search-box mb-5">
      <div class="row g-3 align-items-center">
        <div class="col-md-10">
          <input 
            type="text" 
            name="search" 
            class="form-control form-control-lg" 
            placeholder="Search products by name..." 
            value="<%= typeof search !== 'undefined' ? search : '' %>"
          >
        </div>
        <div class="col-md-2 d-grid">
          <button class="btn btn-primary btn-lg">Search</button>
        </div>
      </div>
    </form>

    <% if (products.length === 0) { %>
      <p class="text-center text-muted">No products found.</p>
    <% } else { %>
      <div class="row row-cols-1 row-cols-md-3 g-4">
        <% products.forEach(product => { %>
          <div class="col d-flex">
            <div class="card product-card h-100 shadow-sm w-100">
              <img src="images/<%= product.image %>" alt="<%= product.productName %>" class="card-img-top product-image">
              <div class="card-body d-flex flex-column">
                <h5 class="card-title"><%= product.productName %></h5>
                <p class="price">$<%= product.price.toFixed(2) %></p>

                <% if (user) { %>
                  <form action="/add-to-cart/<%= product.id %>" method="POST" class="mt-auto">
                    <div class="mb-2">
                      <label class="form-label fw-medium">Quantity:</label>
                      <select class="form-select select-quantity" name="quantity">
                        <% for (let q = 1; q <= 5; q++) { %>
                          <option value="<%= q %>"><%= q %></option>
                        <% } %>
                      </select>
                    </div>
                    <button type="submit" class="btn btn-primary w-100">Add to Cart</button>
                  </form>
                <% } else { %>
                  <a href="/login" class="btn btn-secondary w-100 mt-auto">Login to Buy</a>
                <% } %>

              </div>
            </div>
          </div>
        <% }) %>
      </div>
    <% } %>

  </div>
</body>
</html>
