<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <link rel="stylesheet" href="/css/theme.css">
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
  <title>Supermarket App</title>
  <style>
    body {
      background: radial-gradient(circle at 10% 20%, #e8f0ff 0, #f7f9fc 28%, #eef2f6 60%);
      color: #0f172a;
      font-family: 'Segoe UI', sans-serif;
    }
    .page-card {
      border: 1px solid #e2e8f0;
      border-radius: 16px;
      box-shadow: 0 10px 26px rgba(15, 23, 42, 0.08);
      background: #fff;
      padding: 16px;
    }
    .pill {
      border-radius: 999px;
      padding: 8px 14px;
      font-weight: 700;
      letter-spacing: 0.01em;
    }
    .btn-cta {
      background: linear-gradient(135deg, #2563eb, #60a5fa);
      color: #fff;
      border: none;
      box-shadow: 0 8px 18px rgba(37, 99, 235, 0.25);
      transition: all 0.2s ease;
    }
    .btn-cta:hover { transform: translateY(-1px); color: #fff; box-shadow: 0 10px 20px rgba(37, 99, 235, 0.32); }
    .btn-ghost {
      background: #f1f5f9;
      color: #0f172a;
      border: 1px solid #e2e8f0;
      transition: all 0.15s ease;
    }
    .btn-ghost:hover { background: #e2e8f0; color: #0f172a; }
    .soft-card {
      border: 1px solid #e2e8f0;
      border-radius: 12px;
      background: #f8fbff;
    }
    .table thead { background: #f8fafc; }
    .badge-low { background: #fef9c3; color: #92400e; border: 1px solid #fcd34d; }
  </style>
</head>
<body>
    <%- include('partials/adminNavbar', { user: user }) %>

  <div class="container py-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
      <div>
        <h3 class="mb-0 fw-bold">Inventory</h3>
        <% if (lowStockCount && lowStockCount > 0) { %>
          <div class="alert alert-warning py-2 px-3 mt-2 mb-0 d-inline-flex align-items-center gap-2">
            <span class="pill bg-warning-subtle text-warning-emphasis">Low Stock</span>
            <div><strong><%= lowStockCount %></strong> item(s) below <%= lowStockThreshold %>.</div>
          </div>
        <% } %>
      </div>
      <a href="/addProduct" class="btn btn-cta d-inline-flex align-items-center gap-2">
        <i class="bi bi-plus-circle"></i> Add Product
      </a>
    </div>
    <% if (messages && messages.length) { %>
      <div class="alert alert-danger"><%= messages.join('<br>') %></div>
    <% } %>
    <% if (success && success.length) { %>
      <div class="alert alert-success"><%= success.join('<br>') %></div>
    <% } %>
    <form class="soft-card p-3 mb-3" method="GET" action="/inventory">
      <div class="row g-2 align-items-center">
        <div class="col-md-5">
          <input type="text" name="search" class="form-control" placeholder="Search products..." value="<%= search || '' %>">
        </div>
        <div class="col-md-3">
          <select name="category" class="form-select">
            <option value="">All Types</option>
            <option value="fruits" <%= category === 'fruits' ? 'selected' : '' %>>Fruits</option>
            <option value="vegetable" <%= category === 'vegetable' ? 'selected' : '' %>>Vegetable</option>
            <option value="baked" <%= category === 'baked' ? 'selected' : '' %>>Baked</option>
            <option value="beverage" <%= category === 'beverage' ? 'selected' : '' %>>Beverage</option>
            <option value="raw" <%= category === 'raw' ? 'selected' : '' %>>Raw Food</option>
          </select>
        </div>
        <div class="col-md-3">
          <select name="sort" class="form-select">
            <option value="">Sort</option>
            <option value="price-asc" <%= sort === 'price-asc' ? 'selected' : '' %>>Price: Low to High</option>
            <option value="price-desc" <%= sort === 'price-desc' ? 'selected' : '' %>>Price: High to Low</option>
            <option value="name-asc" <%= sort === 'name-asc' ? 'selected' : '' %>>Name: A to Z</option>
            <option value="name-desc" <%= sort === 'name-desc' ? 'selected' : '' %>>Name: Z to A</option>
          </select>
        </div>
        <div class="col-md-1 d-grid">
          <button class="btn btn-primary">Apply</button>
        </div>
      </div>
    </form>
    <div class="page-card">
        <table class="table table-hover align-middle small text-center mb-0">
          <thead>
              <tr>
                <th width="100">Product Name</th>
                <th width="90">Category</th>
                <th width="100">Product Image</th>
                <th width="50">Quantity</th>
                <th width="80">Status</th>
                <th width="90">Update Stock</th>
                <th width="50">Price</th>
                <th width="50">Edit</th>
                <th width="50">Delete</th>
              </tr>
      </thead>
      <tbody>
        <% const getCategoryFromName = (p) => {
             const name = (p.productName || '').toLowerCase();
             const direct = (p.category || '').toLowerCase();
             if (direct) return direct;
             if (name.match(/banana|apple/)) return 'fruits';
             if (name.match(/tomato|broccoli/)) return 'vegetable';
             if (name.includes('bread')) return 'baked';
             if (name.includes('milk')) return 'beverage';
             if (name.match(/chicken|beef|pork|fish|salmon|steak|meat/)) return 'raw';
             return 'n/a';
           };
        %>
        <% for(let i=0; i < products.length; i++) { %>
          <% const qty = products[i].quantity; %>
          <% const noStock = qty <= 0; %>
          <% const lowStock = !noStock && qty <= 15; %>
          <% const category = getCategoryFromName(products[i]); %>
          <tr class="<%= lowStock ? 'table-warning' : '' %>">
            <td><a href="/product/<%= products[i].id %>" ><%= products[i].productName %></a></td>
            <td class="text-capitalize"><%= category %></td>
            <td><img src = "images/<%= products[i].image %>" width="20%"></td>
            <td>
              <div class="d-flex justify-content-center align-items-center gap-2">
                <span class="fw-semibold"><%= qty %></span>
              </div>
            </td>
            <td>
              <% if (noStock) { %>
                <span class="badge bg-danger text-white">No stock</span>
              <% } else if (lowStock) { %>
                <span class="badge bg-warning text-dark">Low stock</span>
              <% } else { %>
                <span class="badge bg-success-subtle text-success">In stock</span>
              <% } %>
            </td>
            <td>
              <form action="/inventory/<%= products[i].id %>/stock" method="POST" class="d-flex gap-2 justify-content-center">
                <input type="number" class="form-control form-control-sm" name="quantity" min="0" value="<%= products[i].quantity %>" style="width:90px">
                <button class="btn btn-sm btn-outline-primary">Update</button>
              </form>
            </td>
            <td>$<%= products[i].price.toFixed(2) %></td>
            <!-- Edit Link -->
            <td><a href="/updateProduct/<%= products[i].id %>">Edit</a></td>
            <!-- Delete Link -->
            <td><a href="/deleteProduct/<%= products[i].id %>" onclick="return confirm('Are you sure you want to delete this product?')">Delete</a></td>
          </tr>
        <% } %>
      </tbody>
    </table>
    </div>
  </div>
</body>
</html>
