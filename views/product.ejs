<!-- product.ejs -->

<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <link rel="stylesheet" href="/css/theme.css">
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
  <title>Supermarket App</title>
  <style>
    body {
      background: radial-gradient(circle at 10% 20%, #e8f0ff 0, #f7f9fc 28%, #eef2f6 60%);
      font-family: 'Segoe UI', sans-serif;
      color: #0f172a;
    }
    .product-card {
      max-width: 720px;
      margin: 40px auto;
      padding: 24px;
      border-radius: 16px;
      border: 1px solid #e2e8f0;
      box-shadow: 0 8px 24px rgba(15, 23, 42, 0.08);
      background: linear-gradient(135deg, #ffffff 0%, #f9fbff 80%);
    }
    .product-image {
      width: 240px;
      height: 240px;
      object-fit: contain;
      background: #f8fbff;
      border: 1px solid #e2e8f0;
      border-radius: 14px;
      padding: 12px;
    }
  </style>
</head>
<body>
  <%- include('partials/navbar', { user: user, cart: cart }) %>

  <% const isAdmin = user && user.role === "admin"; %>

  <div class="container">
    <div class="product-card">
      <h2 class="section-title text-center mb-2">Product Details</h2>
      <p class="section-subtitle text-center mb-4">Welcome, <%= user ? user.username : 'Guest' %> (<%= user ? user.role : 'N/A' %>)</p>
      <% if (messages && messages.length) { %>
        <div class="alert alert-danger text-center"><%= messages.join('<br>') %></div>
      <% } %>
      <% if (success && success.length) { %>
        <div class="alert alert-success text-center"><%= success.join('<br>') %></div>
      <% } %>

      <% if (product) { %>
        <div class="row g-4 align-items-center">
          <div class="col-md-5 text-center">
            <img src="/images/<%= product.image %>" alt="<%= product.productName %>" class="product-image">
          </div>
          <div class="col-md-7">
            <h4 class="fw-bold mb-2"><%= product.productName %></h4>
            <p class="text-muted mb-2">Quantity: <strong><%= product.quantity %></strong></p>
            <p class="fw-bold fs-5 text-primary mb-3">$<%= Number(product.price).toFixed(2) %></p>
            <% if (averageRating) { %>
              <p class="mb-2">Average rating: <strong><%= averageRating %></strong>/5</p>
            <% } %>
          </div>
        </div>

        <div class="mt-4">
          <h5 class="fw-bold">Customer Reviews</h5>
          <% if (!reviews || reviews.length === 0) { %>
            <p class="text-muted">No reviews yet.</p>
          <% } else { %>
            <% reviews.forEach(review => { %>
              <div class="border rounded p-3 mb-2 bg-white">
                <div class="d-flex justify-content-between align-items-center">
                  <strong><%= review.username %></strong>
                  <span class="text-warning">
                    <% for (let star = 1; star <= 5; star++) { %>
                      <%= star <= review.rating ? '★' : '☆' %>
                    <% } %>
                  </span>
                </div>
                <p class="mb-1"><%= review.comment || 'No comment provided.' %></p>
                <small class="text-muted"><%= review.created_at || '' %></small>
              </div>
            <% }) %>
          <% } %>
        </div>

        <div class="mt-4">
          <h5 class="fw-bold">Leave a Review</h5>
          <% if (user) { %>
            <form action="/product/<%= product.id %>/review" method="POST" class="row g-2">
              <div class="col-md-3">
                <label class="form-label">Rating</label>
                <select name="rating" class="form-select" required>
                  <% for (let r = 5; r >= 1; r--) { %>
                    <option value="<%= r %>"><%= r %> star<%= r > 1 ? 's' : '' %></option>
                  <% } %>
                </select>
              </div>
              <div class="col-md-9">
                <label class="form-label">Comment</label>
                <textarea name="comment" class="form-control" rows="2" placeholder="Share your thoughts"></textarea>
              </div>
              <div class="col-12">
                <button class="btn btn-primary">Submit Review</button>
              </div>
            </form>
          <% } else { %>
            <p class="text-muted">Please <a href="/login">login</a> to leave a review.</p>
          <% } %>
        </div>
      <% } else { %>
        <p>No product found.</p>
      <% } %>

      <div class="d-flex gap-2 mt-4">
        <% if (isAdmin) { %>
          <a href="/inventory" class="btn btn-outline-primary">Back to Inventory</a>
        <% } else { %>
          <a href="/shopping" class="btn btn-outline-primary">Back to Shop</a>
        <% } %>
      </div>
    </div>
  </div>
  
</body>
</html>
