<!-- product.ejs -->

<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <link rel="stylesheet" href="/css/theme.css">
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
  <title>Supermarket App</title>
  <style>
    body {
      background: radial-gradient(circle at 10% 20%, #e8f0ff 0, #f7f9fc 28%, #eef2f6 60%);
      font-family: 'Segoe UI', sans-serif;
      color: #0f172a;
    }
    .product-card {
      max-width: 720px;
      margin: 40px auto;
      padding: 24px;
      border-radius: 16px;
      border: 1px solid #e2e8f0;
      box-shadow: 0 8px 24px rgba(15, 23, 42, 0.08);
      background: linear-gradient(135deg, #ffffff 0%, #f9fbff 80%);
    }

    .star-input input { display: none; }
    .star-input span {
      font-size: 1.4rem;
      color: #cbd5e1;
      cursor: pointer;
      transition: color 0.15s ease;
      user-select: none;
    }
    .star-input.active span {
      color: #ffc107;
    }
    .star-input span:hover {
      color: #ffb703;
    }
    .product-image {
      width: 240px;
      height: 240px;
      object-fit: contain;
      background: #f8fbff;
      border: 1px solid #e2e8f0;
      border-radius: 14px;
      padding: 12px;
    }
  </style>
</head>
<body>
  <%- include('partials/navbar', { user: user, cart: cart }) %>

  <% const isAdmin = user && user.role === "admin"; %>
  <% const formatDate = (dt) => { try { return new Date(dt).toLocaleDateString('en-GB'); } catch(e) { return dt; } }; %>

  <div class="container py-4">
    <div class="product-card">
      <h2 class="section-title text-center mb-2">Product Details</h2>
      <% if (messages && messages.length) { %>
        <div class="alert alert-danger text-center"><%= messages.join('<br>') %></div>
      <% } %>
      <% if (success && success.length) { %>
        <div class="alert alert-success text-center"><%= success.join('<br>') %></div>
      <% } %>

      <% if (product) { %>
        <div class="row g-4 align-items-center">
          <div class="col-md-5 text-center">
            <div class="position-relative">
              <img src="/images/<%= product.image %>" alt="<%= product.productName %>" class="product-image">
              <span class="badge bg-primary position-absolute top-0 start-0 m-2 fw-semibold">S$<%= Number(product.price).toFixed(2) %></span>
            </div>
          </div>
          <div class="col-md-7">
            <div class="d-flex justify-content-between align-items-start">
              <div>
                <h4 class="fw-bold mb-2"><%= product.productName %></h4>
                <p class="text-muted mb-2">Stock: <strong><%= product.quantity %></strong></p>
              </div>
              <% if (averageRating) { %>
                <div class="text-end">
                  <div class="text-warning fs-5">
                    <% for (let s = 1; s <= 5; s++) { %>
                      <%- s <= Math.round(averageRating) ? '&#9733;' : '&#9734;' %>
                    <% } %>
                  </div>
                  <small class="text-muted">Avg <%= averageRating %>/5</small>
                </div>
              <% } %>
            </div>
            <p class="mt-3">Discover premium quality groceries tailored for your daily needs.</p>
            <div class="d-flex gap-2 mt-3">
              <% if (!isAdmin) { %>
                <form action="/add-to-cart/<%= product.id %>" method="POST" class="d-flex gap-2">
                  <input type="hidden" name="quantity" value="1">
                  <button class="btn btn-primary px-3">Add to Cart</button>
                </form>
              <% } %>
            </div>
          </div>
        </div>

        <div class="mt-4">
          <h5 class="fw-bold">Customer Reviews</h5>
          <% if (!reviews || reviews.length === 0) { %>
            <p class="text-muted">No reviews yet.</p>
          <% } else { %>
            <% reviews.forEach(review => { %>
              <div class="border rounded p-3 mb-2 bg-white">
                <div class="d-flex justify-content-between align-items-center">
                  <strong><%= review.username %></strong>
                  <span class="text-warning">
                    <% for (let star = 1; star <= 5; star++) { %>
                      <%- star <= review.rating ? '&#9733;' : '&#9734;' %>
                    <% } %>
                  </span>
                </div>
                <p class="mb-1"><%= review.comment || 'No comment provided.' %></p>
                <small class="text-muted"><%= review.created_at ? formatDate(review.created_at) : '' %></small>
                <% if (review.reply) { %>
                  <div class="mt-2 p-2 bg-light border rounded">
                    <strong>Admin reply:</strong> <%= review.reply %>
                  </div>
                <% } %>

                <% if (user && user.role === 'admin') { %>
                  <div class="d-flex gap-2 mt-2">
                    <form action="/reviews/<%= review.id %>/delete" method="POST" onsubmit="return confirm('Delete this review?');">
                      <input type="hidden" name="productId" value="<%= product.id %>">
                      <button class="btn btn-sm btn-outline-danger">Delete</button>
                    </form>
                    <form action="/reviews/<%= review.id %>/reply" method="POST" class="d-flex gap-2 flex-grow-1">
                      <input type="hidden" name="productId" value="<%= product.id %>">
                      <input type="text" name="reply" class="form-control form-control-sm" placeholder="Reply..." value="<%= review.reply || '' %>">
                      <button class="btn btn-sm btn-outline-primary">Save Reply</button>
                    </form>
                  </div>
                <% } %>
              </div>
            <% }) %>
          <% } %>
        </div>

        <div class="mt-4">
          <h5 class="fw-bold">Leave a Review</h5>
          <% if (user) { %>
            <form action="/product/<%= product.id %>/review" method="POST" class="row g-2">
              <div class="col-md-4">
                <label class="form-label d-block">Rating</label>
                <div class="d-flex gap-1 align-items-center star-input-group">
                  <% for (let r = 1; r <= 5; r++) { %>
                    <label class="star-input" data-value="<%= r %>">
                      <input type="radio" name="rating" value="<%= r %>" required>
                      <span>&#9733;</span>
                    </label>
                  <% } %>
                </div>
              </div>
              <div class="col-md-8">
                <label class="form-label">Comment</label>
                <textarea name="comment" class="form-control" rows="2" placeholder="Share your thoughts"></textarea>
              </div>
              <div class="col-12 d-flex justify-content-end">
                <button class="btn btn-primary">Submit Review</button>
              </div>
            </form>
          <% } else { %>
            <p class="text-muted">Please <a href="/login">login</a> to leave a review.</p>
          <% } %>
        </div>
      <% } else { %>
        <p>No product found.</p>
      <% } %>

      <div class="d-flex gap-2 mt-4">
        <% if (isAdmin) { %>
          <a href="/inventory" class="btn btn-outline-primary">Back to Inventory</a>
        <% } else { %>
          <a href="/" class="btn btn-outline-primary">Back to Shop</a>
        <% } %>
      </div>
    </div>
  </div>
  
  <script>
    (function() {
      const group = document.querySelector('.star-input-group');
      if (!group) return;
      const labels = Array.from(group.querySelectorAll('.star-input'));
      const inputs = Array.from(group.querySelectorAll('input[type="radio"]'));

      const setActive = (value) => {
        labels.forEach(label => {
          const val = Number(label.dataset.value || 0);
          label.classList.toggle('active', val <= value);
        });
      };

      inputs.forEach(input => {
        input.addEventListener('change', () => setActive(Number(input.value)));
        const label = input.closest('.star-input');
        const value = Number(label.dataset.value || 0);
        label.addEventListener('mouseenter', () => setActive(value));
        label.addEventListener('mouseleave', () => {
          const checked = group.querySelector('input[type="radio"]:checked');
          setActive(checked ? Number(checked.value) : 0);
        });
      });

      const prechecked = group.querySelector('input[type="radio"]:checked');
      setActive(prechecked ? Number(prechecked.value) : 0);
    })();
  </script>

</body>
</html>




