<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <link rel="stylesheet" href="/css/theme.css">
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
  <title>Supermarket App</title>
  <style>
    body {
      background: #faf7f2;
      font-family: 'Segoe UI', sans-serif;
      color: #111827;
    }

    .back-link {
      display: inline-flex;
      align-items: center;
      gap: 6px;
      color: #6b7280;
      text-decoration: none;
      font-weight: 600;
      margin-bottom: 16px;
    }

    .back-link:hover {
      color: #111827;
    }

    .product-card {
      background: #fff;
      border-radius: 18px;
      padding: 24px;
      border: 1px solid #ececec;
      box-shadow: 0 10px 24px rgba(17, 24, 39, 0.06);
    }

    .product-shell {
      display: grid;
      grid-template-columns: minmax(280px, 1fr) minmax(280px, 1fr);
      gap: 28px;
      align-items: start;
    }

    .product-media {
      border-radius: 20px;
      overflow: hidden;
      background: #fff;
      border: 1px solid #ececec;
    }

    .product-image {
      width: 100%;
      height: 100%;
      max-height: 420px;
      object-fit: cover;
      display: block;
    }

    .category-pill {
      display: inline-flex;
      align-items: center;
      padding: 6px 12px;
      border-radius: 999px;
      background: #f3f4f6;
      color: #374151;
      font-weight: 600;
      font-size: 0.85rem;
      margin-bottom: 10px;
    }

    .product-name {
      font-size: 2rem;
      font-weight: 800;
      margin-bottom: 8px;
    }

    .product-desc {
      color: #6b7280;
      margin-bottom: 18px;
    }

    .product-label {
      font-size: 0.85rem;
      font-weight: 700;
      color: #6b7280;
      text-transform: uppercase;
      letter-spacing: 0.04em;
      margin-bottom: 4px;
    }

    .product-unit {
      margin-bottom: 14px;
      color: #111827;
      font-weight: 600;
    }

    .product-price {
      font-size: 2rem;
      font-weight: 800;
      margin-bottom: 16px;
    }

    .qty-control {
      display: inline-flex;
      align-items: center;
      gap: 12px;
      background: #f3f4f6;
      border-radius: 999px;
      padding: 6px 12px;
      margin-bottom: 16px;
    }

    .qty-btn {
      width: 32px;
      height: 32px;
      border-radius: 50%;
      border: none;
      background: #f0ece6;
      color: #111827;
      font-weight: 700;
    }

    .qty-input {
      width: 40px;
      text-align: center;
      border: none;
      background: transparent;
      font-weight: 700;
      color: #111827;
    }

    .add-btn {
      width: 100%;
      border: none;
      border-radius: 999px;
      padding: 12px 18px;
      background: #22c55e;
      color: #fff;
      font-weight: 700;
      display: inline-flex;
      align-items: center;
      justify-content: center;
      gap: 10px;
      transition: transform 0.2s ease, box-shadow 0.2s ease, background 0.2s ease;
    }

    .add-btn:hover {
      background: #16a34a;
      color: #fff;
      transform: translateY(-1px);
      box-shadow: 0 12px 18px rgba(34, 197, 94, 0.25);
    }

    .add-btn:disabled {
      background: #cbd5e1;
      color: #fff;
      cursor: not-allowed;
      box-shadow: none;
      transform: none;
    }

    .stock-pill {
      display: inline-flex;
      align-items: center;
      gap: 8px;
      margin-top: 14px;
      font-weight: 600;
      color: #16a34a;
    }

    .stock-dot {
      width: 8px;
      height: 8px;
      border-radius: 50%;
      background: #16a34a;
    }

    .stock-pill.low {
      color: #d97706;
    }

    .stock-pill.low .stock-dot {
      background: #d97706;
    }

    .stock-pill.out {
      color: #dc2626;
    }

    .stock-pill.out .stock-dot {
      background: #dc2626;
    }

    @media (max-width: 992px) {
      .product-shell {
        grid-template-columns: 1fr;
      }

      .product-image {
        max-height: 360px;
      }
    }

    .star-input input { display: none; }
    .star-input span {
      font-size: 1.4rem;
      color: #cbd5e1;
      cursor: pointer;
      transition: color 0.15s ease;
      user-select: none;
    }
    .star-input.active span {
      color: #ffc107;
    }
    .star-input span:hover {
      color: #ffb703;
    }

    .reviews-section {
      margin-top: 32px;
      padding-top: 24px;
      border-top: 1px solid #ececec;
    }

    .reviews-header {
      display: flex;
      flex-wrap: wrap;
      align-items: center;
      justify-content: space-between;
      gap: 16px;
      margin-bottom: 18px;
    }

    .reviews-title {
      font-size: 1.4rem;
      font-weight: 800;
    }

    .rating-summary {
      display: flex;
      align-items: center;
      gap: 12px;
      color: #111827;
      font-weight: 600;
    }

    .rating-score {
      font-size: 1.3rem;
      font-weight: 800;
    }

    .rating-count {
      color: #6b7280;
      font-size: 0.9rem;
      font-weight: 600;
    }

    .rating-stars {
      color: #f59e0b;
      font-size: 1.2rem;
    }

    .reviews-grid {
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(240px, 1fr));
      gap: 16px;
    }

    .review-card {
      background: #fff;
      border: 1px solid #ececec;
      border-radius: 16px;
      padding: 16px;
      box-shadow: 0 10px 20px rgba(17, 24, 39, 0.05);
    }

    .review-head {
      display: flex;
      align-items: center;
      justify-content: space-between;
      gap: 8px;
      margin-bottom: 8px;
    }

    .review-user {
      font-weight: 700;
    }

    .review-meta {
      color: #6b7280;
      font-size: 0.85rem;
    }

    .review-text {
      color: #374151;
      margin-bottom: 8px;
    }

    .review-reply {
      background: #f9fafb;
      border: 1px solid #eef2f7;
      border-radius: 12px;
      padding: 10px;
      font-size: 0.9rem;
      color: #374151;
    }

    .review-form-card {
      background: #fff;
      border: 1px dashed #e5e7eb;
      border-radius: 16px;
      padding: 16px;
      margin-top: 18px;
    }

    .related-section {
      margin-top: 32px;
    }

    .related-title {
      font-size: 1.2rem;
      font-weight: 800;
      margin-bottom: 16px;
    }

    .related-grid {
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
      gap: 16px;
    }

    .related-card {
      background: #fff;
      border: 1px solid #ececec;
      border-radius: 14px;
      overflow: hidden;
      text-decoration: none;
      color: #111827;
      box-shadow: 0 8px 18px rgba(17, 24, 39, 0.06);
      transition: transform 0.2s ease, box-shadow 0.2s ease;
      display: flex;
      flex-direction: column;
    }

    .related-card:hover {
      transform: translateY(-2px);
      box-shadow: 0 12px 22px rgba(17, 24, 39, 0.1);
      color: #111827;
    }

    .related-image {
      width: 100%;
      height: 180px;
      object-fit: contain;
      background: #fff;
    }

    .related-body {
      padding: 12px 14px 14px;
      display: grid;
      gap: 6px;
    }

    .related-name {
      font-weight: 700;
      font-size: 0.98rem;
    }

    .related-price {
      font-weight: 700;
      color: #111827;
    }
  </style>
</head>
<body>
  <%- include('partials/navbar', { user: user, cart: cart }) %>

  <% const isAdmin = user && user.role === "admin"; %>
  <% const formatDate = (dt) => { try { return new Date(dt).toLocaleDateString('en-GB'); } catch(e) { return dt; } }; %>
  <% const outOfStock = product && product.quantity <= 0; %>
  <% const lowStock = product && !outOfStock && product.quantity < 10; %>
  <% const categoryLabel = (product && product.category) ? product.category : ''; %>

  <div class="container py-4">
    <a href="/" class="back-link">&larr; Back to products</a>

    <div class="product-card">
      <% if (messages && messages.length) { %>
        <div class="alert alert-danger"><%= messages.join('<br>') %></div>
      <% } %>
      <% if (success && success.length) { %>
        <div class="alert alert-success"><%= success.join('<br>') %></div>
      <% } %>

      <% if (product) { %>
        <div class="product-shell">
          <div class="product-media">
            <img src="/images/<%= product.image %>" alt="<%= product.productName %>" class="product-image">
          </div>
          <div class="product-info">
            <% if (categoryLabel) { %>
              <div class="category-pill"><%= categoryLabel %></div>
            <% } %>
            <div class="product-name"><%= product.productName %></div>
            <div class="product-desc">Fresh, organic groceries picked at peak ripeness. Perfect for snacking or cooking.</div>

            <div class="product-label">Unit</div>
            <div class="product-unit">Per item</div>

            <div class="product-price">$<%= Number(product.price).toFixed(2) %></div>

            <% if (!isAdmin) { %>
              <form action="/add-to-cart/<%= product.id %>" method="POST" class="add-cart-form" data-price="<%= Number(product.price).toFixed(2) %>">
                <div class="product-label">Quantity</div>
                <div class="qty-control">
                  <button type="button" class="qty-btn" data-change="-1" <%= outOfStock ? 'disabled' : '' %>>-</button>
                  <input type="number" name="quantity" class="qty-input" min="1" step="1" value="1" readonly>
                  <button type="button" class="qty-btn" data-change="1" <%= outOfStock ? 'disabled' : '' %>>+</button>
                </div>
                <button class="add-btn" type="submit" <%= outOfStock ? 'disabled' : '' %>>
                  <span>Add to Cart - $<span class="add-total"><%= Number(product.price).toFixed(2) %></span></span>
                </button>
              </form>
            <% } %>

            <div class="stock-pill <%= outOfStock ? 'out' : (lowStock ? 'low' : '') %>">
              <span class="stock-dot"></span>
              <% if (outOfStock) { %>
                Out of stock
              <% } else if (lowStock) { %>
                Low stock - <%= product.quantity %> available
              <% } else { %>
                In stock - <%= product.quantity %> available
              <% } %>
            </div>
          </div>
        </div>

        <% if (relatedProducts && relatedProducts.length) { %>
          <div class="related-section">
            <div class="related-title">More from <%= relatedCategoryLabel %></div>
            <div class="related-grid">
              <% relatedProducts.forEach(item => { %>
                <a class="related-card" href="/product/<%= item.id %>">
                  <img src="/images/<%= item.image %>" alt="<%= item.productName %>" class="related-image">
                  <div class="related-body">
                    <div class="related-name"><%= item.productName %></div>
                    <div class="related-price">$<%= Number(item.price).toFixed(2) %></div>
                  </div>
                </a>
              <% }) %>
            </div>
          </div>
        <% } %>

        <div class="reviews-section">
          <div class="reviews-header">
            <div class="reviews-title">Customer Reviews</div>
            <div class="rating-summary">
              <% if (averageRating) { %>
                <div class="rating-score"><%= averageRating %></div>
                <div class="rating-stars">
                  <% for (let s = 1; s <= 5; s++) { %>
                    <%- s <= Math.round(averageRating) ? '&#9733;' : '&#9734;' %>
                  <% } %>
                </div>
              <% } else { %>
                <div class="rating-score">No ratings yet</div>
              <% } %>
              <div class="rating-count"><%= reviews ? reviews.length : 0 %> reviews</div>
            </div>
          </div>

          <% if (!reviews || reviews.length === 0) { %>
            <p class="text-muted">No reviews yet.</p>
          <% } else { %>
            <div class="reviews-grid">
              <% reviews.forEach(review => { %>
                <div class="review-card">
                  <div class="review-head">
                    <div class="review-user"><%= review.username %></div>
                    <div class="rating-stars">
                      <% for (let star = 1; star <= 5; star++) { %>
                        <%- star <= review.rating ? '&#9733;' : '&#9734;' %>
                      <% } %>
                    </div>
                  </div>
                  <div class="review-text"><%= review.comment || 'No comment provided.' %></div>
                  <div class="review-meta"><%= review.created_at ? formatDate(review.created_at) : '' %></div>
                  <% if (review.reply) { %>
                    <div class="review-reply mt-2"><strong>Admin reply:</strong> <%= review.reply %></div>
                  <% } %>

                  <% if (user && user.role === 'admin') { %>
                    <div class="d-flex gap-2 mt-3">
                      <form action="/reviews/<%= review.id %>/delete" method="POST" onsubmit="return confirm('Delete this review?');">
                        <input type="hidden" name="productId" value="<%= product.id %>">
                        <button class="btn btn-sm btn-outline-danger">Delete</button>
                      </form>
                      <form action="/reviews/<%= review.id %>/reply" method="POST" class="d-flex gap-2 flex-grow-1">
                        <input type="hidden" name="productId" value="<%= product.id %>">
                        <input type="text" name="reply" class="form-control form-control-sm" placeholder="Reply..." value="<%= review.reply || '' %>">
                        <button class="btn btn-sm btn-outline-primary">Save Reply</button>
                      </form>
                    </div>
                  <% } %>
                </div>
              <% }) %>
            </div>
          <% } %>

          <div class="review-form-card">
            <h5 class="fw-bold mb-2">Leave a Review</h5>
          <% if (user) { %>
            <form action="/product/<%= product.id %>/review" method="POST" class="row g-2" novalidate>
              <div class="col-md-4">
                <label class="form-label d-block">Rating</label>
                <div id="reviewRatingError" class="text-danger small mb-1" style="display:none;">Please select a star rating.</div>
                <div class="d-flex gap-1 align-items-center star-input-group">
                  <% for (let r = 1; r <= 5; r++) { %>
                    <label class="star-input" data-value="<%= r %>">
                      <input type="radio" name="rating" value="<%= r %>">
                      <span>&#9733;</span>
                    </label>
                  <% } %>
                </div>
              </div>
              <div class="col-md-8">
                <label class="form-label">Comment</label>
                <textarea name="comment" class="form-control" rows="2" placeholder="Share your thoughts"></textarea>
              </div>
              <div class="col-12 d-flex justify-content-end">
                <button class="btn btn-primary">Submit Review</button>
              </div>
            </form>
          <% } else { %>
            <p class="text-muted">Please <a href="/login">login</a> to leave a review.</p>
          <% } %>
          </div>
        </div>

      <% } else { %>
        <p>No product found.</p>
      <% } %>
    </div>
  </div>

  <script>
    (function() {
      const group = document.querySelector('.star-input-group');
      if (!group) return;
      const labels = Array.from(group.querySelectorAll('.star-input'));
      const inputs = Array.from(group.querySelectorAll('input[type="radio"]'));
      const ratingError = document.getElementById('reviewRatingError');
      const reviewForm = document.querySelector('form[action^="/product/"][action$="/review"]');

      const setActive = (value) => {
        labels.forEach(label => {
          const val = Number(label.dataset.value || 0);
          label.classList.toggle('active', val <= value);
        });
        if (ratingError) ratingError.style.display = 'none';
      };

      inputs.forEach(input => {
        input.addEventListener('change', () => setActive(Number(input.value)));
        const label = input.closest('.star-input');
        const value = Number(label.dataset.value || 0);
        label.addEventListener('mouseenter', () => setActive(value));
        label.addEventListener('mouseleave', () => {
          const checked = group.querySelector('input[type="radio"]:checked');
          setActive(checked ? Number(checked.value) : 0);
        });
      });

      const prechecked = group.querySelector('input[type="radio"]:checked');
      setActive(prechecked ? Number(prechecked.value) : 0);

      if (reviewForm) {
        reviewForm.addEventListener('submit', (e) => {
          const checked = group.querySelector('input[type="radio"]:checked');
          if (!checked) {
            e.preventDefault();
            if (ratingError) ratingError.style.display = 'block';
          }
        });
      }
    })();

    document.querySelectorAll('.add-cart-form').forEach((form) => {
      const price = Number(form.dataset.price || 0);
      const qtyInput = form.querySelector('.qty-input');
      const totalEl = form.querySelector('.add-total');
      const buttons = form.querySelectorAll('.qty-btn');

      const updateTotal = () => {
        const qty = Number(qtyInput.value) || 1;
        totalEl.textContent = (price * qty).toFixed(2);
      };

      buttons.forEach((btn) => {
        btn.addEventListener('click', () => {
          const delta = Number(btn.dataset.change || 0);
          const current = Number(qtyInput.value) || 1;
          const next = Math.max(1, current + delta);
          qtyInput.value = next;
          updateTotal();
        });
      });

      updateTotal();
    });
  </script>
</body>
</html>
