<!-- product.ejs -->

<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <link rel="stylesheet" href="/css/theme.css">
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
  <title>Supermarket App</title>
  <style>
    body {
      background: radial-gradient(circle at 10% 20%, #e8f0ff 0, #f7f9fc 28%, #eef2f6 60%);
      font-family: 'Segoe UI', sans-serif;
      color: #0f172a;
    }
    .product-card {
      max-width: 720px;
      margin: 40px auto;
      padding: 24px;
      border-radius: 16px;
      border: 1px solid #e2e8f0;
      box-shadow: 0 8px 24px rgba(15, 23, 42, 0.08);
      background: linear-gradient(135deg, #ffffff 0%, #f9fbff 80%);
    }
    .product-image {
      width: 240px;
      height: 240px;
      object-fit: contain;
      background: #f8fbff;
      border: 1px solid #e2e8f0;
      border-radius: 14px;
      padding: 12px;
    }
  </style>
</head>
<body>
  <%- include('partials/navbar', { user: user, cart: cart }) %>

  <% const isAdmin = user && user.role === "admin"; %>

  <div class="container">
    <div class="product-card">
      <h2 class="section-title text-center mb-2">Product Details</h2>
      <p class="section-subtitle text-center mb-4">Welcome, <%= user ? user.username : 'Guest' %> (<%= user ? user.role : 'N/A' %>)</p>

      <% if (product) { %>
        <div class="row g-4 align-items-center">
          <div class="col-md-5 text-center">
            <img src="/images/<%= product.image %>" alt="<%= product.productName %>" class="product-image">
          </div>
          <div class="col-md-7">
            <h4 class="fw-bold mb-2"><%= product.productName %></h4>
            <p class="text-muted mb-2">Quantity: <strong><%= product.quantity %></strong></p>
            <p class="fw-bold fs-5 text-primary mb-3">$<%= product.price.toFixed(2) %></p>
          </div>
        </div>
      <% } else { %>
        <p>No product found.</p>
      <% } %>

      <div class="d-flex gap-2 mt-4">
        <% if (isAdmin) { %>
          <a href="/inventory" class="btn btn-outline-primary">Back to Inventory</a>
        <% } else { %>
          <a href="/shopping" class="btn btn-outline-primary">Back to Shop</a>
        <% } %>
      </div>
    </div>
  </div>
  
</body>
</html>
