<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <title>Supermarket App - Login</title>
</head>

<body class="bg-light">

    <!-- Navbar -->
    <%- include('partials/navbar', { user: user, cart: cart }) %>

    <!-- Login Section -->
    <div class="container d-flex justify-content-center align-items-center" style="min-height: 85vh;">
        <div class="col-md-5">

            <div class="card shadow-lg p-4 rounded-4 border-0">

                <h2 class="text-center mb-4 fw-bold">Welcome Back</h2>
                <p class="text-center text-muted mb-4">Log in to continue shopping</p>

                <!-- Error messages -->
                <% if (errors && errors.length > 0) { %>
                    <div class="alert alert-danger">
                        <% errors.forEach(function(error) { %>
                            <p class="mb-0"><%= error %></p>
                        <% }); %>
                    </div>
                <% } %>

                <!-- Success messages -->
                <% if (messages && messages.length > 0) { %>
                    <div class="alert alert-success">
                        <% messages.forEach(function(message) { %>
                            <p class="mb-0"><%= message %></p>
                        <% }); %>
                    </div>
                <% } %>

                <form action="/login" method="POST">

                    <div class="mb-3">
                        <label class="form-label fw-semibold">Email</label>
                        <input type="email" id="email" name="email" class="form-control p-2" placeholder="Enter your email" required>
                    </div>

                    <div class="mb-3">
                        <label class="form-label fw-semibold">Password</label>
                        <input type="password" id="password" name="password" class="form-control p-2" placeholder="Enter your password" required>
                    </div>

                    <button type="submit" class="btn btn-primary w-100 py-2 fw-semibold mt-2">
                        Login
                    </button>

                </form>

                <div class="text-center mt-3">
                    <small class="text-muted">Don't have an account?</small>
                    <a href="/register" class="fw-semibold">Register here</a>
                </div>

            </div>
        </div>
    </div>

</body>
</html>

<style>
    body {
        background: #f7f7f7;
    }

    .card input:focus {
        border-color: #0d6efd;
        box-shadow: 0 0 0 0.1rem rgba(13, 110, 253, 0.25);
    }
</style>
