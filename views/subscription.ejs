<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>My Subscription</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <link rel="stylesheet" href="/css/theme.css">
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css">
  <style>
    body {
      background: radial-gradient(circle at 10% 20%, #e8f0ff 0, #f7f9fc 28%, #eef2f6 60%);
      font-family: 'Segoe UI', sans-serif;
      color: #0f172a;
    }
    .page {
      max-width: 900px;
      margin: 30px auto;
      background: #fff;
      border: 1px solid #e2e8f0;
      border-radius: 18px;
      padding: 28px;
      box-shadow: 0 10px 24px rgba(15, 23, 42, 0.08);
    }
    .header {
      display: flex;
      align-items: center;
      justify-content: space-between;
      gap: 12px;
      border-bottom: 1px solid #e2e8f0;
      padding-bottom: 14px;
      margin-bottom: 20px;
    }
    .title {
      font-size: 1.6rem;
      font-weight: 800;
      color: #0b1c40;
    }
    .pill {
      padding: 6px 14px;
      border-radius: 999px;
      font-weight: 700;
      text-transform: capitalize;
      display: inline-flex;
      align-items: center;
      gap: 8px;
      font-size: 0.9rem;
    }
    .pill-active { background: #dcfce7; color: #15803d; }
    .pill-past_due { background: #fff7ed; color: #b45309; }
    .pill-cancelled { background: #fee2e2; color: #b91c1c; }
    .info-grid {
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(220px, 1fr));
      gap: 14px;
    }
    .info-card {
      border: 1px solid #e2e8f0;
      border-radius: 12px;
      padding: 14px;
      background: #f9fbff;
    }
    .info-card h6 {
      font-weight: 700;
      margin-bottom: 6px;
    }
    .muted { color: #6b7280; }
    .btn-cta {
      background: #22c55e;
      color: #fff;
      border: none;
      border-radius: 999px;
      padding: 10px 18px;
      font-weight: 700;
    }
    .btn-cta:hover {
      background: #16a34a;
      color: #fff;
    }
  </style>
</head>
<body>
  <%- include('partials/navbar', { user: user, cart: cart }) %>

  <div class="page">
    <% 
      const formatDate = (dt) => { try { return dt ? new Date(dt).toLocaleDateString('en-GB') : 'N/A'; } catch (e) { return 'N/A'; } };
      const planName = 'Biweekly Essentials Subscription';
      const amountCents = subscriptionInfo && subscriptionInfo.amountCents ? subscriptionInfo.amountCents : 0;
      const currency = subscriptionInfo && subscriptionInfo.currency ? subscriptionInfo.currency : 'SGD';
      const currencyPrefix = currency === 'SGD' ? '$' : `${currency} `;
      const billingAmount = amountCents ? `${currencyPrefix}${(amountCents / 100).toFixed(2)}` : 'N/A';
      const monthlyAmount = amountCents ? `${currencyPrefix}${((amountCents * 26) / 12 / 100).toFixed(2)}` : 'N/A';
      const nextBilling = (subscriptionInfo && subscriptionInfo.nextBillingDate) ? formatDate(subscriptionInfo.nextBillingDate) : 'N/A';
      const lastInvoiceId = (subscriptionInfo && subscriptionInfo.lastInvoiceId) ? subscriptionInfo.lastInvoiceId : (subscription && subscription.last_invoice_id ? subscription.last_invoice_id : 'N/A');
      const lastInvoiceDate = (subscriptionInfo && subscriptionInfo.lastInvoiceDate) ? formatDate(subscriptionInfo.lastInvoiceDate) : 'N/A';
      const status = ((subscriptionInfo && subscriptionInfo.status) || (subscription && subscription.status) || 'active').toLowerCase();
      const cancelAtPeriodEnd = Boolean(subscriptionInfo && subscriptionInfo.cancelAtPeriodEnd);
      const canCancel = status === 'active' && !cancelAtPeriodEnd;
    %>
    <div class="header">
      <div>
        <div class="title">My Subscription</div>
        <div class="muted"><%= planName %></div>
      </div>
      <% if (subscription) { 
           let pillClass = 'pill-active';
           if (status === 'past_due') pillClass = 'pill-past_due';
           if (status === 'canceled' || status === 'cancelled') pillClass = 'pill-cancelled';
           if (cancelAtPeriodEnd) pillClass = 'pill-past_due';
      %>
        <span class="pill <%= pillClass %>">
          <i class="bi bi-stars"></i>
          <%= cancelAtPeriodEnd ? 'canceling' : status %>
        </span>
      <% } %>
    </div>

    <% if (!subscription) { %>
      <div class="text-center py-4">
        <p class="muted mb-3">You do not have an active subscription yet.</p>
        <a href="/checkout" class="btn btn-cta">Subscribe with Stripe</a>
      </div>
    <% } else { %>
      <div class="info-grid">
        <div class="info-card">
          <h6>Plan Name</h6>
          <div class="muted"><%= planName %></div>
        </div>
        <div class="info-card">
          <h6>Billing (Monthly)</h6>
          <div class="muted"><%= monthlyAmount %></div>
          <div class="muted small">Based on every 2 weeks: <%= billingAmount %></div>
        </div>
        <div class="info-card">
          <h6>Next Billing Date</h6>
          <div class="muted"><%= nextBilling %></div>
        </div>
        <div class="info-card">
          <h6>Subscription ID</h6>
          <div class="muted"><%= subscription.stripe_subscription_id %></div>
        </div>
        <div class="info-card">
          <h6>Customer ID</h6>
          <div class="muted"><%= subscription.stripe_customer_id || 'N/A' %></div>
        </div>
        <div class="info-card">
          <h6>Last Invoice</h6>
          <div class="muted"><%= lastInvoiceId %></div>
          <div class="muted small">Date: <%= lastInvoiceDate %></div>
        </div>
        <div class="info-card">
          <h6>Status</h6>
          <div class="muted"><%= subscription.status || 'active' %></div>
        </div>
      </div>
      <% if (subscriptionInfo && subscriptionInfo.cancelAtPeriodEnd) { %>
        <div class="mt-3 text-muted small">
          Cancels at period end: <%= subscriptionInfo.cancelAtDate ? formatDate(subscriptionInfo.cancelAtDate) : 'N/A' %>
        </div>
      <% } %>
      <div class="mt-4 d-flex justify-content-end gap-2">
        <a href="/orders" class="btn btn-outline-secondary">View Orders</a>
        <% if (canCancel) { %>
          <button type="button" class="btn btn-danger" data-bs-toggle="modal" data-bs-target="#cancelSubscriptionModal">
            Remove Subscription
          </button>
        <% } else { %>
          <button type="button" class="btn btn-danger" disabled>
            Cancellation scheduled
          </button>
        <% } %>
      </div>
    <% } %>
  </div>

  <% if (subscription && canCancel) { %>
    <div class="modal fade" id="cancelSubscriptionModal" tabindex="-1" aria-hidden="true">
      <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
          <div class="modal-header">
            <h5 class="modal-title">Cancel subscription?</h5>
            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
          </div>
          <div class="modal-body">
            Your subscription will remain active until the end of the current billing period. You can resubscribe anytime.
          </div>
          <div class="modal-footer">
            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Keep subscription</button>
            <form action="/subscription/cancel" method="POST">
              <button type="submit" class="btn btn-danger">Confirm cancel</button>
            </form>
          </div>
        </div>
      </div>
    </div>
  <% } %>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
