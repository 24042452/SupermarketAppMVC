<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <link rel="stylesheet" href="/css/theme.css">
  <title><%= title || 'Scan to Pay' %></title>
  <style>
    body {
      background: #faf7f2;
      font-family: 'Segoe UI', sans-serif;
      color: #111827;
    }
    .qr-card {
      background: #fff;
      border-radius: 16px;
      padding: 24px;
      border: 1px solid #ececec;
      box-shadow: 0 10px 24px rgba(17, 24, 39, 0.06);
    }
    .qr-image {
      width: 260px;
      height: 260px;
      border-radius: 12px;
      border: 1px solid #e5e7eb;
      background: #fff;
      object-fit: contain;
    }
    .timer-pill {
      display: inline-flex;
      align-items: center;
      gap: 8px;
      background: #111827;
      color: #fff;
      border-radius: 999px;
      padding: 6px 12px;
      font-weight: 700;
      font-size: 0.85rem;
    }
  </style>
</head>
<body>
  <%- include('partials/navbar', { user: user, cart: cart }) %>

  <div class="container my-5" style="max-width: 720px;">
    <div class="qr-card text-center">
      <h2 class="mb-3"><%= title || 'Scan to Pay' %></h2>
      <p class="text-muted">Amount: $<%= Number(total || 0).toFixed(2) %></p>
      <img class="qr-image mb-3" src="<%= qrCodeUrl %>" alt="NETS QR code">
      <div class="mb-3">
        <span class="timer-pill">Time left: <span id="netsTimer"><%= timer || 300 %></span>s</span>
      </div>
      <p class="text-muted small mb-2">Scan with your NETS app to complete payment.</p>
      <div class="text-success small fw-bold mb-2" id="netsSuccess" style="display: none;"></div>
      <div class="text-danger small fw-bold mb-2" id="netsError" style="display: none;"></div>
      <a href="/checkout" class="btn btn-outline-secondary mt-2">Back to checkout</a>
    </div>
  </div>

  <script>
    const timerEl = document.getElementById('netsTimer');
    const successEl = document.getElementById('netsSuccess');
    const errorEl = document.getElementById('netsError');
    const txnRetrievalRef = <%- JSON.stringify(txnRetrievalRef || '') %>;
    const courseInitId = <%- JSON.stringify(courseInitId || '') %>;

    if (timerEl) {
      let remaining = parseInt(timerEl.textContent, 10);
      const tick = () => {
        if (Number.isNaN(remaining) || remaining <= 0) return;
        remaining -= 1;
        timerEl.textContent = String(remaining);
      };
      setInterval(tick, 1000);
    }

    const pollStatus = async () => {
      if (!txnRetrievalRef) return;
      try {
        const response = await fetch('/nets-qr/confirm', {
          method: 'POST',
          headers: { 'Content-Type': 'application/json' },
          credentials: 'same-origin',
          body: JSON.stringify({ txnRetrievalRef, courseInitId })
        });
        const data = await response.json();

        if (data.status === 'success' && data.invoiceUrl) {
          if (successEl) {
            successEl.textContent = 'Payment successful! Redirecting to invoice...';
            successEl.style.display = 'block';
          }
          setTimeout(() => {
            window.location.href = data.invoiceUrl;
          }, 1200);
          return true;
        }

        if (data.status === 'failed') {
          if (errorEl) {
            errorEl.textContent = data.message || 'Payment failed. Please try again.';
            errorEl.style.display = 'block';
          }
          return true;
        }
      } catch (err) {
        console.error('NETS status error:', err);
      }
      return false;
    };

    let pollHandle = null;
    const startPolling = () => {
      pollStatus();
      pollHandle = setInterval(async () => {
        const done = await pollStatus();
        if (done && pollHandle) {
          clearInterval(pollHandle);
          pollHandle = null;
        }
      }, 3000);
    };

    startPolling();
  </script>
</body>
</html>
