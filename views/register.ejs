<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <title>Supermarket App - Register</title>
</head>

<body class="bg-light">

    <!-- Navbar -->
    <%- include('partials/navbar', { user: user, cart: cart }) %>

    <!-- Registration Section -->
    <div class="container d-flex justify-content-center align-items-center" style="min-height: 90vh;">
        <div class="col-md-6">

            <div class="card shadow-lg p-4 rounded-4 border-0">

                <h2 class="text-center mb-4 fw-bold">Create an Account</h2>
                <p class="text-center text-muted mb-4">Join us and start shopping today</p>

                <!-- Error messages -->
                <% if (messages && messages.length > 0) { %>
                    <div class="alert alert-danger">
                        <% messages.forEach(function(message) { %>
                            <p class="mb-0"><%= message %></p>
                        <% }); %>
                    </div>
                <% } %>

                <form action="/register" method="POST">

                    <div class="mb-3">
                        <label class="form-label fw-semibold">Username</label>
                        <input 
                            type="text" 
                            id="username" 
                            name="username" 
                            class="form-control p-2"
                            required
                            value="<%= formData ? formData.username : '' %>">
                    </div>

                    <div class="mb-3">
                        <label class="form-label fw-semibold">Email</label>
                        <input 
                            type="email" 
                            id="email" 
                            name="email" 
                            class="form-control p-2"
                            required
                            value="<%= formData ? formData.email : '' %>">
                    </div>

                    <div class="mb-3">
                        <label class="form-label fw-semibold">Password</label>
                        <input 
                            type="password" 
                            id="password" 
                            name="password" 
                            class="form-control p-2"
                            required>
                    </div>

                    <div class="mb-3">
                        <label class="form-label fw-semibold">Address</label>
                        <input 
                            type="text" 
                            id="address" 
                            name="address" 
                            class="form-control p-2"
                            required
                            value="<%= formData ? formData.address : '' %>">
                    </div>

                    <div class="mb-3">
                        <label class="form-label fw-semibold">Contact Number</label>
                        <input 
                            type="text" 
                            id="contact" 
                            name="contact" 
                            class="form-control p-2"
                            required
                            value="<%= formData ? formData.contact : '' %>">
                    </div>

                    <div class="mb-3">
                        <label class="form-label fw-semibold">Role</label>
                        <select id="role" name="role" class="form-control p-2" required>
                            <option value="user" <%= formData && formData.role === 'user' ? 'selected' : '' %>>User</option>
                            <option value="admin" <%= formData && formData.role === 'admin' ? 'selected' : '' %>>Admin</option>
                        </select>
                    </div>

                    <button type="submit" class="btn btn-primary w-100 py-2 fw-semibold mt-2">
                        Register
                    </button>
                </form>

                <div class="text-center mt-3">
                    <small class="text-muted">Already have an account?</small>
                    <a href="/login" class="fw-semibold">Login here</a>
                </div>

            </div>
        </div>
    </div>

</body>
</html>

<style>
    body {
        background: #f7f7f7;
    }

    .card input:focus, .card select:focus {
        border-color: #0d6efd;
        box-shadow: 0 0 0 0.1rem rgba(13, 110, 253, 0.25);
    }
</style>
