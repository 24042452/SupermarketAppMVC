<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <link rel="stylesheet" href="/css/theme.css">
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
  <title>Manage Orders</title>
  <style>
    body { 
      background: radial-gradient(circle at 10% 20%, #e8f0ff 0, #f7f9fc 28%, #eef2f6 60%); 
      color: #0f172a;
      font-family: 'Segoe UI', sans-serif;
    }
    .card { border: 1px solid #e2e8f0; border-radius: 16px; box-shadow: 0 8px 24px rgba(15,23,42,0.08); }
    .badge-status { text-transform: capitalize; }
    .table-row-link { color: inherit; text-decoration: none; font-weight: 700; }
    .table-row-link:hover { color: #0f3d8a; text-decoration: underline; }
  </style>
</head>
<body>
  <%- include('partials/adminNavbar', { user: user }) %>

  <div class="container py-4">
    <h3 class="mb-3 fw-bold">Orders</h3>

    <div class="card p-3">
      <div class="table-responsive">
        <table class="table align-middle">
          <thead>
            <tr>
              <th>ID</th>
              <th>User</th>
              <th>Email</th>
              <th>Total</th>
              <th>Date</th>
              <th>Status</th>
              <th>Update</th>
            </tr>
          </thead>
          <tbody>
            <% if (orders.length === 0) { %>
              <tr><td colspan="7" class="text-center text-muted py-3">No orders found.</td></tr>
            <% } else { %>
              <% orders.forEach(order => { %>
                <% 
                  const statusLower = (order.status || '').toLowerCase();
                  let statusClass = '';
                  let statusLabel = order.status;
                  if (statusLower === 'pending') { statusClass = 'badge-status-pending'; statusLabel = 'Pending'; }
                  else if (statusLower === 'delivery') { statusClass = 'badge-status-delivery'; statusLabel = 'Delivery'; }
                  else if (statusLower === 'delivered') { statusClass = 'badge-status-delivered'; statusLabel = 'Delivered'; }
                %>
                <tr>
                  <td><a class="table-row-link" href="/orders/<%= order.id %>">#<%= order.id %></a></td>
                  <td><%= order.username %></td>
                  <td><%= order.email %></td>
                  <td>$<%= order.total %></td>
                  <td><%= order.order_date %></td>
                  <td><span class="badge badge-status <%= statusClass %>"><%= statusLabel %></span></td>
                  <td>
                    <form action="/admin/orders/<%= order.id %>/status" method="POST" class="d-flex gap-2">
                      <select name="status" class="form-select form-select-sm" required>
                        <% statuses.forEach(status => { %>
                          <option value="<%= status %>" <%= order.status === status ? 'selected' : '' %>><%= status %></option>
                        <% }) %>
                      </select>
                      <button class="btn btn-sm btn-primary">Save</button>
                    </form>
                  </td>
                </tr>
              <% }) %>
            <% } %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</body>
</html>
