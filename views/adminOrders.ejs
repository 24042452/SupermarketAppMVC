<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
  <title>Manage Orders</title>
  <style>
    body { background: #f5f7fb; }
    .card { border: none; border-radius: 14px; box-shadow: 0 6px 18px rgba(0,0,0,0.06); }
    .badge-status { text-transform: capitalize; }
  </style>
</head>
<body>
  <%- include('partials/adminNavbar', { user: user }) %>

  <div class="container py-4">
    <h3 class="mb-3 fw-bold">Orders</h3>

    <div class="card p-3">
      <div class="table-responsive">
        <table class="table align-middle">
          <thead>
            <tr>
              <th>ID</th>
              <th>User</th>
              <th>Email</th>
              <th>Total</th>
              <th>Date</th>
              <th>Status</th>
              <th>Update</th>
            </tr>
          </thead>
          <tbody>
            <% if (orders.length === 0) { %>
              <tr><td colspan="7" class="text-center text-muted py-3">No orders found.</td></tr>
            <% } else { %>
              <% orders.forEach(order => { %>
                <tr>
                  <td>#<%= order.id %></td>
                  <td><%= order.username %></td>
                  <td><%= order.email %></td>
                  <td>$<%= order.total %></td>
                  <td><%= order.order_date %></td>
                  <td><span class="badge bg-secondary badge-status"><%= order.status %></span></td>
                  <td>
                    <form action="/admin/orders/<%= order.id %>/status" method="POST" class="d-flex gap-2">
                      <select name="status" class="form-select form-select-sm" required>
                        <% statuses.forEach(status => { %>
                          <option value="<%= status %>" <%= order.status === status ? 'selected' : '' %>><%= status %></option>
                        <% }) %>
                      </select>
                      <button class="btn btn-sm btn-primary">Save</button>
                    </form>
                  </td>
                </tr>
              <% }) %>
            <% } %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</body>
</html>
