<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
  <title>Manage Users</title>
  <style>
    body { background: #f5f7fb; }
    .card { border: none; border-radius: 14px; box-shadow: 0 6px 18px rgba(0,0,0,0.06); }
  </style>
</head>
<body>
  <%- include('partials/adminNavbar', { user: user }) %>

  <div class="container py-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
      <h3 class="mb-0 fw-bold">Users</h3>
      <a href="/register" class="btn btn-sm btn-primary">Add User</a>
    </div>

    <div class="card p-3">
      <div class="table-responsive">
        <table class="table align-middle">
          <thead>
            <tr>
              <th>ID</th>
              <th>Name</th>
              <th>Email</th>
              <th>Contact</th>
              <th>Role</th>
              <th>Actions</th>
            </tr>
          </thead>
          <tbody>
            <% if (users.length === 0) { %>
              <tr><td colspan="6" class="text-center text-muted py-3">No users found.</td></tr>
            <% } else { %>
              <% users.forEach(u => { %>
                <tr>
                  <td><%= u.id %></td>
                  <td><%= u.username %></td>
                  <td><%= u.email %></td>
                  <td><%= u.contact %></td>
                  <td><span class="badge bg-secondary text-capitalize"><%= u.role %></span></td>
                  <td>
                    <form action="/admin/users/<%= u.id %>/delete" method="POST" onsubmit="return confirm('Delete this user?');">
                      <button class="btn btn-sm btn-outline-danger" <% if (user && user.id === u.id) { %>disabled<% } %>>Delete</button>
                    </form>
                  </td>
                </tr>
              <% }) %>
            <% } %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</body>
</html>
